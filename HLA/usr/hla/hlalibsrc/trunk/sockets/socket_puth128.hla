unit socketUnit;
		
#includeOnce( "sockets.hhf" )
#includeOnce( "hla.hhf" )


/*****************************************************/
/*                                                   */
/* baseSocketClass_t.puth128-                        */
/*                                                   */
/* Outputs an lword to a file as a hexadecimal string*/
/*                                                   */
/*****************************************************/


procedure baseSocketClass_t.puth128( l:lword ); 
	@noframe; 
	@nodisplay;
	@noalignstack;
	
var
	eaxSave		:dword;
	ediSave		:dword;
	esiSave		:pointer to baseSocketClass_t;


	procedure puth128Thunk( thunksEBPval:dword ); @noframe;	 @nodisplay;
	begin puth128Thunk;
	
		push( ebp );			// Thunks always do this.
		mov( [esp+8], ebp );	// Retrieve EBP value passed as parameter
		
		mov( ebp::esiSave, esi );
		(type baseSocketClass_t [esi]).puts( (type string eax));
		
		pop( ebp );
		ret( _parms_ );
		
	end puth128Thunk;
	
begin puth128;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( esi, esiSave );
	mov( edi, ediSave );
	mov( eax, eaxSave );
	
	hla.puth128
	( 
		#{	// Push thunk object on stack: 
			pushd( &puth128Thunk );
			push( ebp );
		}#, 
		l 
	);

	mov( eaxSave, eax );
	mov( ediSave, edi );
	mov( esiSave, esi );
	leave();
	ret( _parms_ );
		
end puth128;
		
		

	
end socketUnit;

