unit socketUnit;
		
#includeOnce( "sockets.hhf" )
#includeOnce( "conv.hhf" )
#includeOnce( "excepts.hhf" )


procedure baseSocketClass_t.puth8Size( b:byte; width:int32; fill:char ); 
	@noframe;
	@nodisplay;
	@noalignstack;

var
	eaxSave		:dword;
	ediSave		:dword;
	esiSave		:pointer to baseSocketClass_t;


	procedure puth8sizeThunk( thunksEBPval:dword ); @noframe; @nodisplay;
	begin puth8sizeThunk;
	
		push( ebp );			// Thunks always do this.
		mov( [esp+8], ebp );	// Retrieve EBP value passed as parameter
		
		mov( ebp::esiSave, esi );
		(type baseSocketClass_t [esi]).puts( (type string eax));
		
		pop( ebp );
		ret( _parms_ );
		
	end puth8sizeThunk;
	
begin puth8Size;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( esi, esiSave );
	mov( edi, ediSave );
	mov( eax, eaxSave );
	
	hla.puth8size
	( 
		#{	// Push thunk object on stack: 
			pushd( &puth8sizeThunk );
			push( ebp );
		}#, 
		b,
		width,
		fill 
	);

	mov( eaxSave, eax );
	mov( ediSave, edi );
	mov( esiSave, esi );
	leave();
	ret( _parms_ );
		
end puth8Size;
	
end socketUnit;

