unit socketUnit;
		
#includeOnce( "sockets.hhf" )
#includeOnce( "hla.hhf" )

procedure baseSocketClass_t.puttb( tb:tbyte ); 
	@nodisplay;
	@noframe;
var
	eaxSave		:dword;
	ediSave		:dword;
	esiSave		:pointer to baseSocketClass_t;


	procedure puttbThunk( thunksEBPval:dword ); @noframe; @nodisplay;
	begin puttbThunk;
	
		push( ebp );			// Thunks always do this.
		mov( [esp+8], ebp );	// Retrieve EBP value passed as parameter
		
		mov( ebp::esiSave, esi );
		(type baseSocketClass_t [esi]).puts( (type string eax));
		
		pop( ebp );
		ret( _parms_ );
		
	end puttbThunk;
	
begin puttb;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( esi, esiSave );
	mov( edi, ediSave );
	mov( eax, eaxSave );
	
	hla.puttb
	( 
		#{	// Push thunk object on stack: 
			pushd( &puttbThunk );
			push( ebp );
		}#, 
		tb 
	);

	mov( eaxSave, eax );
	mov( ediSave, edi );
	mov( esiSave, esi );
	leave();
	ret( _parms_ );
		
end puttb;
		

	
end socketUnit;

