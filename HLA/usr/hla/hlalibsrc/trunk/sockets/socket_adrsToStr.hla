unit sockets;
?@nostackalign := true;
?@noframe := true;
?@nodisplay := true;

#includeOnce( "sockets.hhf" )


// baseSocketClass_t.adrsToStr-
//
//	Converts this.lclAdrs (which is in Big Endian format)
// to a string of the form "ddd.ddd.ddd.ddd".

procedure baseSocketClass_t.adrsToStr( s:string );
begin adrsToStr;

	push( ebp );
	mov( esp, ebp );
	sock.adrsToStr( this.IPadrs.sin_addr, s );
	leave();
	ret( _parms_ );	
	
end adrsToStr;


end sockets;
