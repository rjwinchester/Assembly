unit socketUnit;
		
#includeOnce( "sockets.hhf" )
#includeOnce( "hla.hhf" )

// baseSocketClass_t.putu32-
// Outputs a 32-bit unsigned integer to the socket.



procedure baseSocketClass_t.putu32( d:dword ); @noframe; @nodisplay;  
var
	eaxSave		:dword;
	ediSave		:dword;
	esiSave		:pointer to baseSocketClass_t;


	procedure putu32Thunk( thunksEBPval:dword ); @noframe; @nodisplay;
	begin putu32Thunk;
	
		push( ebp );			// Thunks always do this.
		mov( [esp+8], ebp );	// Retrieve EBP value passed as parameter
		
		mov( ebp::esiSave, esi );
		(type baseSocketClass_t [esi]).puts( (type string eax));
		
		pop( ebp );
		ret( _parms_ );
		
	end putu32Thunk;
	
begin putu32;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( esi, esiSave );
	mov( edi, ediSave );
	mov( eax, eaxSave );
	
	hla.putu32
	( 
		#{	// Push thunk object on stack: 
			pushd( &putu32Thunk );
			push( ebp );
		}#, 
		d 
	);

	mov( eaxSave, eax );
	mov( ediSave, edi );
	mov( esiSave, esi );
	leave();
	ret( _parms_ );
		
end putu32;
	
end socketUnit;

