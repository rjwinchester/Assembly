unit socketUnit;
		
#includeOnce( "sockets.hhf" )
#includeOnce( "hla.hhf" )


/*****************************************************/
/*                                                   */
/* baseSocketClass_t.puth16-                         */
/*                                                   */
/* Outputs a word as a hexadecimal string.           */
/*                                                   */
/*****************************************************/


method vBaseSocketClass_t.puth16( w:word ); 
	@noframe; 
	@nodisplay;
var
	eaxSave		:dword;
	ediSave		:dword;
	esiSave		:pointer to vBaseSocketClass_t;


	procedure vputh16Thunk( thunksEBPval:dword ); @noframe; @nodisplay;
	begin vputh16Thunk;
	
		push( ebp );			// Thunks always do this.
		mov( [esp+8], ebp );	// Retrieve EBP value passed as parameter
		
		mov( ebp::esiSave, esi );
		(type vBaseSocketClass_t [esi]).puts( (type string eax));
		
		pop( ebp );
		ret( _parms_ );
		
	end vputh16Thunk;
	
begin puth16;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( esi, esiSave );
	mov( edi, ediSave );
	mov( eax, eaxSave );
	
	hla.puth16
	( 
		#{	// Push thunk object on stack: 
			pushd( &vputh16Thunk );
			push( ebp );
		}#, 
		w 
	);

	mov( eaxSave, eax );
	mov( ediSave, edi );
	mov( esiSave, esi );
	leave();
	ret( _parms_ );
		
end puth16;
		
end socketUnit;

