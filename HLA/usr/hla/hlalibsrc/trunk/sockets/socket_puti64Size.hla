unit socketUnit;
		
#includeOnce( "sockets.hhf" )
#includeOnce( "hla.hhf" )



procedure baseSocketClass_t.puti64Size( q:qword; width:int32; fill:char ); 
	@noframe;
	@nodisplay;

var
	eaxSave		:dword;
	ediSave		:dword;
	esiSave		:pointer to baseSocketClass_t;


	procedure putiSize64Thunk( thunksEBPval:dword ); @noframe; @nodisplay;
	begin putiSize64Thunk;
	
		push( ebp );			// Thunks always do this.
		mov( [esp+8], ebp );	// Retrieve EBP value passed as parameter
		
		mov( ebp::esiSave, esi );
		(type baseSocketClass_t [esi]).puts( (type string eax));
		
		pop( ebp );
		ret( _parms_ );
		
	end putiSize64Thunk;
	
begin puti64Size;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( esi, esiSave );
	mov( edi, ediSave );
	mov( eax, eaxSave );
	
	hla.puti64size
	( 
		#{	// Push thunk object on stack: 
			pushd( &putiSize64Thunk );
			push( ebp );
		}#, 
		q,
		width,
		fill 
	);

	mov( eaxSave, eax );
	mov( ediSave, edi );
	mov( esiSave, esi );
	leave();
	ret( _parms_ );
		
end puti64Size;
	
end socketUnit;

