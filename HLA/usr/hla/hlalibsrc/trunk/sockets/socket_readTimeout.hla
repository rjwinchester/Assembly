unit sockets;
?@nostackalign := true;
?@noframe := true;
?@nodisplay := true;

#includeOnce( "sockets.hhf" )

procedure baseSocketClass_t.readTimeout( var buf:var; len:dword; msTimeout:dword );
var
	bytesRead	:dword;
	ebxSave		:dword;
	ecxSave		:dword;
	edxSave		:dword;
	esiSave		:dword;
	ediSave		:dword;
	timeout		:hla.timeval;
	fdset		:hla.fd_set_t;
	
	
begin readTimeout;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	
	mov( edi, ediSave );	// We have to preserve the
	mov( esi, esiSave );	// register because we have
	mov( edx, edxSave );	// no idea what will happen to
	mov( ecx, ecxSave );	// them if there is an exception.
	mov( ebx, ebxSave );
	mov( 0, bytesRead );
	
	// Convert milliseconds to seconds and microseconds:
	
	mov( msTimeout, eax );
	mul( 1000, eax );			// Convert to microseconds
	div( 1_000_000, edx:eax );	// Secs->EAX, microseconds->EDX
	mov( eax, timeout.tv_sec );
	mov( edx, timeout.tv_usec );
	
	sock.fd_zero( fdset );
	sock.fd_set( this.handle, fdset );
	readMore:
	
		lea( eax, timeout );
		sock.select( this.handle, fdset, NULL, NULL, [eax] );
		test( eax, eax );	// Zero if timeout occurred.
		jz EndOfFile;		// Just return # chars read.
			
			sock.recv( this.handle, val buf, len, 0 );
			test( eax, eax );	// Zero if timeout occurred
			jz EndOfFile;
			
			add( eax, buf );
			add( eax, bytesRead );
			sub( eax, len );
			jnz readMore;

	EndOfFile:
	mov( ediSave, edi );
	mov( esiSave, esi );
	mov( edxSave, edx );
	mov( ecxSave, ecx );
	mov( ebxSave, ebx );
	mov( bytesRead, eax );
	leave();
	ret( _parms_ );
	
end readTimeout;


end sockets;
