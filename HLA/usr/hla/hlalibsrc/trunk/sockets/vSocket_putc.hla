unit socketUnit;
		

#includeOnce( "sockets.hhf" )
	

/******************************************************/
/*                                                    */
/* baseSocketClass_t.putc-                            */
/*                                                    */
/* This routine writes a single character to the      */
/* socket.                                            */
/*                                                    */
/******************************************************/




method vBaseSocketClass_t.putc( c:char ); 
	@nodisplay;
	@noframe;
	@noalignstack;
	
begin putc;

	push( ebp );
	mov( esp, ebp );
	push( eax );
	lea( eax, c );
	this.write( [eax], 1 );
	pop( eax );
	pop( ebp );
	ret( _parms_ );
	
end putc;

end socketUnit;

