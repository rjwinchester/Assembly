unit socketUnit;
		
#includeOnce( "sockets.hhf" )
#includeOnce( "hla.hhf" )

// baseSocketClass_t.puti64-
// Outputs a 64-bit integer to the socket.


method vBaseSocketClass_t.puti64( q:qword ); @noframe; @nodisplay; 
var
	eaxSave		:dword;
	ediSave		:dword;
	esiSave		:pointer to vBaseSocketClass_t;


	procedure vputi64Thunk( thunksEBPval:dword ); @noframe; @nodisplay;
	begin vputi64Thunk;
	
		push( ebp );			// Thunks always do this.
		mov( [esp+8], ebp );	// Retrieve EBP value passed as parameter
		
		mov( ebp::esiSave, esi );
		(type vBaseSocketClass_t [esi]).puts( (type string eax));
		
		pop( ebp );
		ret( _parms_ );
		
	end vputi64Thunk;
	
begin puti64;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( esi, esiSave );
	mov( edi, ediSave );
	mov( eax, eaxSave );
	
	hla.puti64
	( 
		#{	// Push thunk object on stack: 
			pushd( &vputi64Thunk );
			push( ebp );
		}#, 
		q 
	);

	mov( eaxSave, eax );
	mov( ediSave, edi );
	mov( esiSave, esi );
	leave();
	ret( _parms_ );
		
end puti64;
	
		
		
		

	
end socketUnit;

