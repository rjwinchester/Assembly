unit socketUnit;
		

#includeOnce( "sockets.hhf" )
#includeOnce( "strings.hhf" )
#includeOnce( "stdio.hhf" )
	

/******************************************************/
/*                                                    */
/* baseSocketClass_t.newln-                           */
/*                                                    */
/* This routine writes a newline sequence to the      */
/* socket.                                            */
/*                                                    */
/******************************************************/




method vBaseSocketClass_t.newln; 
	@nodisplay;
	@noframe;
	@noalignstack;
	
readonly
	newline	:string := nl;
begin newln;

	push( ebp );
	mov( esp, ebp );
	push( eax );
	mov( newline, eax );
	this.write( [eax], (type str.strRec [eax]).length );
	pop( eax );
	pop( ebp );
	ret();
	
end newln;

end socketUnit;

