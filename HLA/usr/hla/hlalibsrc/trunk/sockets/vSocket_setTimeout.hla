unit sockets;
?@nostackalign := true;
?@noframe := true;
?@nodisplay := true;

#includeOnce( "sockets.hhf" )
#includeOnce( "hla.hhf" )

method vBaseSocketClass_t.setTimeout( timeout:hla.timeval );
begin setTimeout;

	push( ebp );
	mov( esp, ebp );
	push( eax );
	mov( timeout.tv_sec, eax );
	mov( eax, this.timeout.tv_sec );
	mov( timeout.tv_usec, eax );
	mov( eax, this.timeout.tv_usec );
	
	sock.setTimeout
	( 
		this.handle,
		timeout
	);
	
	pop( eax );
	leave();
	ret( _parms_ );
		
end setTimeout;


end sockets;
