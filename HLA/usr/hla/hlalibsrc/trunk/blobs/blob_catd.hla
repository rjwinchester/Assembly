unit blobUnit;
?@nodisplay := true;
?@nostackalign := true;

#include( "blobs.hhf" )
#include( "hla.hhf" )


// blob.catd-                                              
//                                                        
// Concatenates the hexadecimal representation of the "d"
// parameter to the end of the destination blob.        

procedure blob.catd( dest:blob.blob; d:dword ); @noframe; @nodisplay;
begin catd;

	push( ebp );
	mov( esp, ebp );
	
	push( eax );
	hla.putd
	( 
		#{	// Push (pseudo) thunk object on stack: 
			pushd( &blob._cats );
			push( dest );	// Fake EBP value
		}#, 
		d 
	);
	pop( eax );
	leave();
	ret( _parms_ );
	
end catd;



end blobUnit;




	

