unit blobUnit;
?@nostackalign := true;
?@noframe := true;
?@nodisplay := true;

#includeOnce( "blobs.hhf" )
#includeOnce( "excepts.hhf" )


// blob.geti16-
//
//	Reads a signed 16-bit integer from the specified blob.

procedure blob.geti16( src:blob.blob ); 
begin geti16;

	push( ebp );
	mov( esp, ebp );
	
	blob.geti32( src );
	cmp( eax, 32768 );
	jge vor;
	cmp( eax, -32768 );
	jl vor;
	pop( ebp );
	ret( _parms_ );
	
vor:
	raise( ex.ValueOutOfRange );

end geti16;

	
end blobUnit;

