unit blobUnit;
?@nodisplay := true;
?@nostackalign := true;

#include( "blobs.hhf" );


// blob.catr32-                                             
//                                                          
// Converts the "r" parameter from real32 format to a string
// (using the format options) and concatenates this to the  
// end of "dest".                                           

procedure blob.catr32
( 
	dest	:blob.blob; 
	r		:real32; 
	width	:uns32; 
	decpts	:uns32;
	fill	:char
);  @noframe;
var
	r80:real80;
	
begin catr32;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	
	fld( r );
	fstp( r80 );
	blob.catr80( dest, r80, width, decpts, fill );
	leave();
	ret( _parms_ );
	
end catr32;

end blobUnit;




	

