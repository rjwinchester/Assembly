unit blobUnit;
?@nodisplay := true;
?@nostackalign := true;

#include( "blobs.hhf" );
#include( "hla.hhf" );
#include( "conv.hhf" );


// blob.catb-                                             
//                                                       
// Concatenates the hexadecimal representation of the "b"
// parameter to the end of the destination blob.       

procedure blob.catb( dest:blob.blob; b:byte ); @noframe;
begin catb;

	push( ebp );
	mov( esp, ebp );
	
	push( eax );
	hla.putb
	( 
		#{	// Push (pseudo) thunk object on stack: 
			pushd( &blob._cats );
			push( dest );	// Fake EBP value
		}#, 
		b 
	);
	pop( eax );
	leave();
	ret( _parms_ );
	
end catb;

end blobUnit;




	

