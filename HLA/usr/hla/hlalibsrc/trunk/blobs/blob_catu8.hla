unit blobUnit;
?@nodisplay := true;
?@nostackalign := true;

#include( "blobs.hhf" );



// blob.catu8-                                                  
//                                                              
// Appends the unsigned decimal equivalent of the "u8" parameter
// to the end of the specified blob.                            

 
procedure blob.catu8( dest:blob.blob; u8:byte ); 
	@noframe;
begin catu8;

	push( ebp );
	mov( esp, ebp );
	
	push( eax );
	hla.putu8
	( 
		#{	// Push (pseudo) thunk object on stack: 
			pushd( &blob._cats );
			push( dest );	// Fake EBP value
		}#, 
		u8 
	);
	pop( eax );
	leave();
	ret( _parms_ );
	
end catu8;

end blobUnit;




	

