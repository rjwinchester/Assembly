unit FileClass;

#include( "fileclass.hhf" )
#include( "fileio.hhf" )

?@NoStackAlign := true;
?@NoDisplay := true;
?@NoFrame := true;		
		


method virtualFile_t.geti128( var l:lword ); @noframe; 
var
	obj		:dword;
	c		:char;
	
	
	// Low-level implementation of a thunk procedure:
	//
	// Thunk must return a single char in AL from the socket (with carry
	// flag clear) or return carry flag set if there was an EOF.
	
	procedure vfgeti128Thunk( thunksEBPval:dword );
	begin vfgeti128Thunk;
	
		push( ebp );			// Thunks always do this.
		mov( [esp+8], ebp );	// Retrieve EBP value passed as parameter
		push( edi );
		
			mov( ebp::obj, esi );
			(type virtualFile_t [esi]).read( ebp::c, 1 );
			cmp( eax, 1 );		// C=1 if EOF (eax=0), 0 if not EOF
			movzx( ebp::c, eax );

		pop( edi );
		pop( ebp );				// Restore caller's EBP value
        ret( _parms_ );			// Return, removing local EBP parm value.

	end vfgeti128Thunk;
	
begin geti128;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( esi, obj );
	
	push( l );
	pushd( &vfgeti128Thunk );
	push( ebp );
	call hla.geti128;
	
	mov( obj, esi );
	leave();
	ret( _parms_ );

end geti128;


end FileClass;
