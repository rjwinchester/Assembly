unit FileClass;

#include( "fileclass.hhf" )
#include( "fileio.hhf" )
#include( "excepts.hhf" )

?@NoStackAlign := true;
?@NoDisplay := true;
?@NoFrame := true;		
		



procedure file.openNew( FileName:string );
begin openNew;
	
	push( ebp );
	mov( esp, ebp );
	
	push( eax );
	fileio.openNew( FileName );
	mov( eax, this.fileHandle );
	pop( eax );
	pop( ebp );
	ret( _parms_ );
		
end openNew;

end FileClass;
