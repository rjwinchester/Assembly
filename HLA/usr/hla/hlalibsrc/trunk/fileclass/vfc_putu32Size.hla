unit FileClass;

#include( "fileclass.hhf" )
#include( "conv.hhf" )

?@NoStackAlign := true;
?@NoDisplay := true;
?@NoFrame := true;		
		




method virtualFile_t.putu32Size
( 
	d:dword; 
	width:int32;	
	fill:char 
); 
var
	eaxSave		:dword;
	ecxSave		:dword;
	edxSave		:dword;
	ediSave		:dword;
	numWidth	:uns32;
	buffer		:char[4096];
	
begin putu32Size;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( eax, eaxSave );
	mov( ecx, ecxSave );
	mov( edx, edxSave );
	mov( edi, ediSave );

	// Compute the actual size of the number for later use:
	
	conv.u32Size( d );
	mov( eax, numWidth );
	lea( edi, buffer );
	movzx( fill, eax );
	conv._unsToBuf32Size( d, width, numWidth, al, [edi], @size(buffer)-1 );	
	this.write( [edi], ecx );

	mov( eaxSave, eax );
	mov( ecxSave, ecx );
	mov( edxSave, edx );
	mov( ediSave, edi );
	leave();
	ret( _parms_ );
	
end putu32Size;


end FileClass;
