unit FileClass;

#include( "fileclass.hhf" )
#include( "stdlibdata.hhf" )

?@NoStackAlign := true;
?@NoDisplay := true;
?@NoFrame := true;		
		




method virtualFile_t.putb( h:byte );
var
	eaxSave		:dword;
	ecxSave		:dword;
	edxSave		:dword;
	ediSave		:dword;
	buffer		:word;

begin putb;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( eax, eaxSave );
	mov( edi, ediSave );

	// Conversion is done via lookup table:
	
	movzx( h, eax );
	mov( (type word stdlib.hexTbl[eax*2]), ax );
	mov( ax, buffer );
	
	// Write the data to the stream:
	
	lea( edi, buffer );
	this.write( [edi], 2 );
	
	mov( eaxSave, eax );
	mov( ediSave, edi );
	leave();
	ret( _parms_ );
	
end putb;

end FileClass;
