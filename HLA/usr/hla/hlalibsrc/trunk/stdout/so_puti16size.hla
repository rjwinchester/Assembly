unit StdOutput;
#include( "../include/stdoutunit.hhf" );



/***********************************************/
/*                                             */
/* puti16size-                                 */
/*                                             */
/* Outputs a 16-bit signed integer to the      */
/* standard output device.  Lets the caller    */
/* specify a minimum field width and a padding */
/* character (usually a space).                */
/*                                             */
/***********************************************/

procedure stdout.puti16Size( w:word; width:int32; fill:char ); 
	@noframe;
	@nodisplay;
	@nostackalign;
begin puti16Size;

	push( ebp );
	mov( esp, ebp );
	ChkStdOut;
	fileio.puti16Size( StdOutHandle, w, width, #{push((type dword fill));}# );
	pop( ebp );
	ret( _parms_ );
	
end puti16Size;


end StdOutput;



