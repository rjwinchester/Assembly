unit BsdUnit;
#include( "mac.hhf" )

// read - Reads bytes from the specified file descriptor.

procedure mac._exit( exitCode:dword );
	@nodisplay; @noframe;
begin _exit;

	push( ebp );
	mov( esp, ebp );
	mac.pushregs;
	mov( esp, eax );
	push( exitCode );
	push( eax ); 		// Dummy Return/stack cleanup
	mov( mac.sys_exit, eax );
	int( $80 );
	pop( esp );			// Clean parms w/o affecting CF.
	mac.popregs;
	pop( ebp );
	ret( _parms_ );	
	
end _exit;

end BsdUnit;
