unit macUnit;
#include( "mac.hhf" )
#includeOnce( "hla.hhf" )

procedure _recvfrom
( 
		s		:dword; 
	var	buf		:var;
		len		:dword;
		flags	:dword;
	var	from	:hla.sockaddr;
	var	fromlen	:hla.socklen_t 
);
	@cdecl;
	@forward;
	
	

// mac.recvfrom- Reads data from a connection.

procedure mac.recvfrom
( 
		s		:dword; 
	var	buf		:var;
		len		:dword;
		flags	:dword;
	var	from	:hla.sockaddr;
	var	fromlen	:hla.socklen_t 
);
	@nodisplay; @noframe;
var
	ebxSave	:dword;
	ecxSave	:dword;
	edxSave	:dword;
	esiSave	:dword;
	ediSave	:dword;
	
begin recvfrom;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mac.saveregs;

	and( $FFFF_FFF0, esp );		// Align call below to 16 bytes.
	sub( 8, esp );
	_recvfrom( s, val buf, len, flags, from, fromlen );

	mac.restoreregs;
	cmp( eax, -1 );
	je badRslt;
	clc();
	leave();
	ret( _parms_ );
	
badRslt:
	mac.errno();
	stc();
	leave();
	ret( _parms_ );
	
		
end recvfrom;

#asm
	.section __IMPORT__, __jump_table, symbol_stubs, self_modifying_code+pure_instructions, 5
#endasm
procedure _recvfrom
( 
		s		:dword; 
	var	buf		:var;
		len		:dword;
		flags	:dword;
	var	from	:hla.sockaddr;
	var	fromlen	:hla.socklen_t 
);
	@noframe;
	@nodisplay;
begin _recvfrom;
#asm
	.indirect_symbol _recvfrom
	hlt ; hlt ; hlt;  hlt; hlt
	.subsections_via_symbols
#endasm
end _recvfrom;


end macUnit;
