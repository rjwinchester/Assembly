	@cdecl;
	@forward;
	
	

// mac.getpeername- Gets a the peer name of a connection.

procedure mac.getpeername
( 
		s		:dword; 
	var	_name	:hla.sockaddr; 
	var	namelen	:hla.socklen_t 
);
	@nodisplay; @noframe;
var
	ebxSave	:dword;
	ecxSave	:dword;
	edxSave	:dword;
	esiSave	:dword;
	ediSave	:dword;
	
begin getpeername;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mac.saveregs;

	and( $FFFF_FFF0, esp );		// Align call below to 16 bytes.
	sub( 4, esp );
	_getpeername( s, _name, namelen );

	mac.restoreregs;
	cmp( eax, -1 );
	je badRslt;
	clc();
	leave();
	ret( _parms_ );
	
badRslt:
	mac.errno();
	stc();
	leave();
	ret( _parms_ );
	
		
end getpeername;

