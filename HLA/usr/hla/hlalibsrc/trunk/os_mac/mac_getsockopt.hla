		optname	:dword;
	var	optval	:var;
	var	optlen	:hla.socklen_t 
);
	@noframe;
	@nodisplay;
begin _getsockopt;
#asm
	.indirect_symbol _getsockopt
	hlt ; hlt ; hlt;  hlt; hlt
	.subsections_via_symbols
#endasm
end _getsockopt;


end macUnit;
