unit macUnit;
#include( "mac.hhf" )
#includeOnce( "hla.hhf" )

procedure _getsockopt
( 
		s		:dword; 
		level	:dword;
		optname	:dword;
	var	optval	:var;
	var	optlen	:hla.socklen_t 
);
	@cdecl;
	@forward;
	
	

// mac.getsockopt- Gets socket options.

procedure mac.getsockopt
( 
		s		:dword; 
		level	:dword;
		optname	:dword;
	var	optval	:var;
	var	optlen	:hla.socklen_t 
);
	@nodisplay; @noframe;
var
	ebxSave	:dword;
	ecxSave	:dword;
	edxSave	:dword;
	esiSave	:dword;
	ediSave	:dword;
	
begin getsockopt;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mac.saveregs;

	and( $FFFF_FFF0, esp );		// Align call below to 16 bytes.
	sub( 12, esp );
	_getsockopt( s, level, optname, val optval, optlen );

	mac.restoreregs;
	cmp( eax, -1 );
	je badRslt;
	clc();
	leave();
	ret( _parms_ );
	
badRslt:
	mac.errno();
	stc();
	leave();
	ret( _parms_ );
	
		
end getsockopt;

#asm
	.section __IMPORT__, __jump_table, symbol_stubs, self_modifying_code+pure_instructions, 5
#endasm
procedure _getsockopt
( 
		s		:dword; 
