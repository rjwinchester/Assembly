unit FileIOUnit;
		

#include( "../include/fileiounit.hhf" )
#include( "../include/conversions.hhf" )


/*****************************************************/
/*                                                   */
/* fputh128-                                          */
/*                                                   */
/* Outputs an lword to a file as a hexadecimal string*/
/*                                                   */
/*****************************************************/


procedure fileio.puth128( Handle:dword; l:lword ); 
	@noframe; 
	@nodisplay;
	@noalignstack;
	
var
	eaxSave		:dword;
	ediSave		:dword;
	buffer		:char[64];

begin puth128;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	mov( eax, eaxSave );
	mov( edi, ediSave );


	lea( edi, buffer );
	conv.h128ToBuf( l, [edi] );
	
	// Compute the number of characters produced and
	// write the character(s) to the specified file:
	
	lea( eax, buffer );
	sub( eax, edi );
	fileio.write( Handle, [eax], edi );
	
	mov( eaxSave, eax );
	mov( ediSave, edi );
	leave();
	ret( _parms_ );
		
end puth128;
		
		

	
end FileIOUnit;

