unit FileIOUnit;
		

#include( "../include/fileiounit.hhf" )


// fputi32-
// Outputs a 32-bit signed integer to the specified file.

procedure fileio.puti32( Handle:dword; d:dword ); @noframe; @nodisplay;  
begin puti32;

	push( ebp );
	mov( esp, ebp );
	fileio.puti32Size( Handle, d, 0, ' ' );
	pop( ebp );
	ret( _parms_ );
	
end puti32;
		
		
end FileIOUnit;

