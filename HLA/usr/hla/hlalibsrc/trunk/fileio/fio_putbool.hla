unit FileIOUnit;
		



#include( "../include/fileiounit.hhf" )


procedure fileio.putbool( Handle:dword; b:boolean ); @noframe; @nodisplay;
readonly
	tfStrs		:string[2] := ["false", "true"];
begin putbool;

	push( ebp );
	mov( esp, ebp );
	push( eax );
	movzx( b, eax );
	cmp( al, false );
	setne( al );
	fileio.puts( Handle, tfStrs[eax*4] );
	pop( eax );
	pop( ebp );
	ret( _parms_ );
	
end putbool;

	
end FileIOUnit;

