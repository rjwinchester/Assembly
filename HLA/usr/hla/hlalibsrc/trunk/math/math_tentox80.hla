unit mathUnit;

#include( "math.hhf" )



/***********************************************************/
/*                                                         */
/*  TenToX(x)- Computes 10**x.                             */
/*                                                         */
/*             This routine requires three free registers. */
/*                                                         */
/*  	TenToX(x) = 2**(x * lg(10))                        */
/*                                                         */
/***********************************************************/

procedure math.tenToX80( r:real80 ); @nodisplay; @noframe;
begin tenToX80;

		fld( (type real80 [esp+4]) );

		fldl2t();		// Put lg(10) onto the stack
		fmulp(); 		// Compute x*lg(10)
		math._twoToX();  // Compute 2**(x * lg(10)).
		ret( _parms_ );

end tenToX80;


end mathUnit;
