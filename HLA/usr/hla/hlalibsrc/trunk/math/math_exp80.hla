unit mathUnit;

#include( "math.hhf" )



/********************************************************/
/*                                                      */
/*  exp(x)- Computes e**x.                              */
/*          This routine requires three free registers. */
/*                                                      */
/* 	exp(x) = 2**(x * lg(e))                             */
/*                                                      */
/********************************************************/


procedure math.exp80( r:real80 ); @nodisplay; @noframe;
begin exp80;

		fld( (type real80 [esp+4]) );

		fldl2e();		// Put lg(e) onto the stack.
		fmulp(); 		// Compute x*lg(e).
		math._twoToX();	// Compute 2**(x * lg(e))
		ret( _parms_ );

end exp80;


end mathUnit;
