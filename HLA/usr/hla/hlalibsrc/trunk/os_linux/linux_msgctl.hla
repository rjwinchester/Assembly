unit LinuxUnit;
#include( "linux.hhf" )

// msgctl - SysV message operation.

procedure linux.msgctl
(
		msqid	:dword; 
		cmd		:dword;
	var	buf		:linux.msqid_ds
);
	@nodisplay;
begin msgctl;

	linux.pushregs;
	mov( linux.sys_ipc, eax );
	mov( linux.ipcop_msgctl, ebx );
	mov( msqid, ecx );
	mov( cmd, edx );
	mov( buf, esi );
	int( $80 );
	linux.popregs;	
	
end msgctl;

end LinuxUnit;
