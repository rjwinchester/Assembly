unit LinuxUnit;
#include( "linux.hhf" )

// utime - Change the access and modification times of a file.

procedure linux.utime( filename:string; var times: linux.utimbuf );
	@nodisplay;
begin utime;

	linux.pushregs;
	mov( linux.sys_utime, eax );
	mov( filename, ebx );
	mov( times, ecx );
	int( $80 );
	linux.popregs;	
	
end utime;

end LinuxUnit;
