unit LinuxUnit;
#include( "linux.hhf" )

// getgroups - Fetches a set of suplementary groups.

procedure linux.getgroups( size:dword; var list:var );
	@nodisplay;
begin getgroups;

	linux.pushregs;
	mov( linux.sys_getgroups, eax );
	mov( size, ebx );
	mov( list, ecx );
	int( $80 );
	linux.popregs;	
	
end getgroups;

end LinuxUnit;
