unit LinuxUnit;
#include( "linux.hhf" )

// ptrace - Retrives process info for use by a debugger.

procedure linux.ptrace( request:dword; pid:dword; addr:dword; data:dword );
	@nodisplay;
begin ptrace;

	linux.pushregs;
	mov( linux.sys_ptrace, eax );
	mov( request, ebx );
	mov( pid, ecx );
	mov( addr, edx );
	mov( data, esi );
	int( $80 );
	linux.popregs;	
	
end ptrace;

end LinuxUnit;
