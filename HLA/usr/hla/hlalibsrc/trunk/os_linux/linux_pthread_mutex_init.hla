unit linuxUnit;
#include( "linux.hhf" )

procedure _pthread_mutex_init( mutex:dword; attr:dword );
	@cdecl;
	@external( "pthread_mutex_init" );
	
	

// linux.pthread_mutex_init- Initializes a mutex object.

procedure linux.pthread_mutex_init
( 
	var mutex	:linux.pthread_mutex_t;
	var	attr	:linux.pthread_mutex_attr_t 
);
	@nodisplay; 
	@noframe;
	
begin pthread_mutex_init;

	push( ebp );
	mov( esp, ebp );
	linux.pushregs;

	_pthread_mutex_init( (type dword mutex), (type dword attr) );
	add( 8, esp );

	linux.popregs;
	leave();
	ret( _parms_ );
	
end pthread_mutex_init;


end linuxUnit;
