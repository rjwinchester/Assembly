unit LinuxUnit;
#include( "linux.hhf" )

// poll - Checks to see if input is available from a device.

procedure linux.setresgid
( 
	rgid:linux.gid_t; 
	egid:linux.gid_t; 
	sgid:linux.gid_t 
);
	@nodisplay;
begin setresgid;

	linux.pushregs;
	mov( linux.sys_setresgid, eax );
	movzx( rgid, ebx );
	movzx( egid, ecx );
	movzx( sgid, edx );
	int( $80 );
	linux.popregs;	
	
end setresgid;

end LinuxUnit;
