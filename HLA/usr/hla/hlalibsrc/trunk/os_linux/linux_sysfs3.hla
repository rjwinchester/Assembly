unit LinuxUnit;
#include( "linux.hhf" )

// sysfs2 - Two parameter version of sysfs.

procedure linux.sysfs3( option:dword; fs_index:dword; var buf:var );
	@nodisplay;
begin sysfs3;

	linux.pushregs;
	mov( linux.sys_sysfs, eax );
	mov( option, ebx );
	mov( fs_index, ecx );
	mov( buf, edx );
	int( $80 );
	linux.popregs;	
	
end sysfs3;

end LinuxUnit;
