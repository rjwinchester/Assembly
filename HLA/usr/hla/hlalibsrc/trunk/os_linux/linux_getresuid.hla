unit LinuxUnit;
#include( "linux.hhf" )

// getresuid - Retrieves the various user IDs for a process.

procedure linux.getresuid
(
	var	ruid	:linux.uid_t;
	var	euid	:linux.uid_t;
	var	suid	:linux.uid_t
);
	@nodisplay;
begin getresuid;

	linux.pushregs;
	mov( linux.sys_getresuid, eax );
	mov( ruid, ebx );
	mov( euid, ecx );
	mov( suid, edx );
	int( $80 );
	linux.popregs;	
	
end getresuid;

end LinuxUnit;
