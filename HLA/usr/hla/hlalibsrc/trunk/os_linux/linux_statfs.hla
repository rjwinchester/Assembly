unit LinuxUnit;
#include( "linux.hhf" )

// statfs: returns information about a mounted file system.

procedure linux.statfs( path:string; var buf:linux.statfs64_t );
	@nodisplay;
begin statfs;

	linux.pushregs;
	mov( linux.sys_statfs64, eax );
	mov( path, ebx );
	mov( buf, ecx );
	int( $80 );
	linux.popregs;	
	
end statfs;

end LinuxUnit;
