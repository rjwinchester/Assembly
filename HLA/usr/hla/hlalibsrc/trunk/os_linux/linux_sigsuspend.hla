unit LinuxUnit;
#include( "linux.hhf" )

// sigsuspend - Temporarily sets the signal mask (as specified)
//				and then suspends the process pending a signal.

procedure linux.sigsuspend( var mask:linux.sigset_t );
	@nodisplay;
begin sigsuspend;

	linux.pushregs;
	mov( linux.sys_sigsuspend, eax );
	mov( mask, ebx );
	int( $80 );
	linux.popregs;	
	
end sigsuspend;

end LinuxUnit;
