unit LinuxUnit;
#include( "linux.hhf" )

// pread - Read data from a file w/o advancing file ptr.

procedure linux.pread
(
		fd		:dword;
	var	buf		:var;
		count	:linux.size_t;
		offset	:linux.loff_t
);
	@nodisplay;
begin pread;

	linux.pushregs;
	mov( linux.sys_pread64, eax );
	mov( fd, ebx );
	mov( buf, ecx );
	mov( count, edx );
	mov( (type dword offset), esi );
	mov( (type dword offset[4]), edi );
	int( $80 );
	linux.popregs;	
	
end pread;

end LinuxUnit;
