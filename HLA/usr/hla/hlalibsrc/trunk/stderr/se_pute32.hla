unit StdErrOutput;



#include( "../include/stderrunit.hhf" )

/**********************************************************/
/*                                                        */
/* pute32                                                 */
/*                                                        */
/* Wrappers around the putesize routines that supply      */
/* a blank as the pad character.                          */
/*                                                        */
/**********************************************************/

procedure stderr.pute32( r:real32; width:uns32 );  
	@nodisplay; 
	@noalignstack; 
	@noframe;
begin pute32;

	push( ebp );
	mov( esp, ebp );
	ChkStdErr;
	fileio.pute32( StdErrHandle, r, width );
	pop( ebp );
	ret( _parms_ );
	
end pute32;




end StdErrOutput;




	

