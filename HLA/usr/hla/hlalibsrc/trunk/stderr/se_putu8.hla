unit StdErrOutput;



#include( "../include/stderrunit.hhf" )


/********************************************************/
/*                                                      */
/* putu64,                                              */
/* putu32,                                              */
/* putu16,                                              */
/* putu8                                                */
/*                                                      */
/* "Wrapper" versions of the above routines that call   */
/* the associate procedure with some default parameters */
/* (field width zero means print the number using the   */
/* minimum field width, the fill character will be      */
/* ignored).                                            */
/*                                                      */
/********************************************************/


procedure stderr.putu8( b:byte ); @nodisplay; @noalignstack; @noframe;  
begin putu8;

	push( ebp );
	mov( esp, ebp );
	
	push( eax );
	movzx( b, eax );
	push( eax );
	pushd( 0 );
	pushd( ' ' );
	call stderr.putu32Size;
	pop( eax );
	pop( ebp );
	ret( _parms_ );
	
end putu8;



end StdErrOutput;




	

