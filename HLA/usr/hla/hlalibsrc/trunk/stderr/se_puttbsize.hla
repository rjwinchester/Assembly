unit StdErrOutput;



#include( "../include/stderrunit.hhf" )


/*************************************************/
/*                                               */
/* puttb-                                        */
/*                                               */
/* Outputs a TByte value as 20 hex digits to the */
/* standard output device.  Emits underscores    */
/* between groups of four digits to improve      */
/* legibility (e.g., 11_2222_3333_4444_5555).    */
/*                                               */
/*************************************************/

procedure stderr.puttbSize( tb:tbyte; width:int32; fill:char ); 
	@noframe;
	@nodisplay;
	@nostackalign;
begin puttbSize;

	push( ebp );
	mov( esp, ebp );
	ChkStdErr;
	fileio.puttbSize( StdErrHandle, tb, width, #{push((type dword fill));}# );
	pop( ebp );
	ret( _parms_ );
	
end puttbSize;


end StdErrOutput;




	

