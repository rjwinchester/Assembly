unit StdErrOutput;



#include( "../include/stderrunit.hhf" )




/***********************************************/
/*                                             */
/* puti16size-                                 */
/*                                             */
/* Outputs a 16-bit signed integer to the      */
/* standard output device.  Lets the caller    */
/* specify a minimum field width and a padding */
/* character (usually a space).                */
/*                                             */
/***********************************************/

procedure stderr.puti16Size( w:word; width:int32; fill:char ); @nodisplay; @noframe;
begin puti16Size;

	push( ebp );
	mov( esp, ebp );
	ChkStdErr;
	fileio.puti16Size( StdErrHandle, w, width, fill );
	pop( ebp );
	ret( _parms_ );
	
end puti16Size;



end StdErrOutput;




	

