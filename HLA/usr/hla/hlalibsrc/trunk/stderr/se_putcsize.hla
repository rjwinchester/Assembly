unit StdErrOutput;



#include( "../include/stderrunit.hhf" )
#include( "os.hhf" )



/*********************************************************/
/*                                                       */
/* putcsize-                                             */
/*                                                       */
/* This procedure outputs a single character to          */
/* the standard output device (usually the console)      */
/* left or right justified in the specified field width. */
/*                                                       */
/*********************************************************/

procedure stderr.putcSize( c:char; width:int32; fill:char ); @nodisplay; @noframe;
begin putcSize;

	push( ebp );
	mov( esp, ebp );
	ChkStdErr;
	fileio.putcSize( StdErrHandle, c, width, fill );
	pop( ebp );
	ret( _parms_ );

end putcSize;

end StdErrOutput;




	

