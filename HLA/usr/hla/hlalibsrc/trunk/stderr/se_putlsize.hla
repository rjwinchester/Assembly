unit StdErrOutput;



#include( "../include/stderrunit.hhf" )


/***********************************************/
/*                                             */
/* putlSize-                                   */
/*                                             */
/* Outputs a 128-bit hexadecimal value to the  */
/* standard output device.  Lets the caller    */
/* specify a minimum field width and a padding */
/* character (usually a space).                */
/*                                             */
/***********************************************/

procedure stderr.putlSize( l:lword; width:int32; fill:char ); @nodisplay; @noframe;
begin putlSize;

	push( ebp );
	mov( esp, ebp );
	ChkStdErr;
	fileio.putlSize( StdErrHandle, l, width, fill );
	pop( ebp );
	ret( _parms_ );
	
end putlSize;

end StdErrOutput;




	

