unit StdErrOutput;



#include( "../include/stderrunit.hhf" )
#include( "os.hhf" )


procedure stderr.write( var buffer:var; count:dword ); 
	@noframe;
	@nodisplay;
	@nostackalign;
begin write;

	push( ebp );
	mov( esp, ebp );
	ChkStdErr;
	fileio.write( StdErrHandle, buffer, count );
	pop( ebp );
	ret( _parms_ );
	
end write;

end StdErrOutput;




	

