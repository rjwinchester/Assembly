unit sockets;
?@nostackalign := true;
?@noframe := true;
?@nodisplay := true;

#include( "sockets.hhf" )
#include( "excepts.hhf" )
#include( "os.hhf" )

#if( os.win32 )

	// Note: must explicitly include wsock32.lib under Windows

	#include( "w.hhf" )

#elseif( os.linux )
	#include( "linux.hhf" )
#elseif( os.freeBSD )

	#include( "bsd.hhf" )
	procedure _send
	( 
			s		:dword; 
		var	buf		:var;
			len		:dword;
			flags	:dword	// MSG_* constants 
	);
		@cdecl;
		@external( "send" );

#elseif( os.macOS )
	#include( "mac.hhf" )
#else
	#error( "send.hla: unsupported OS" )
#endif


procedure sock.send
( 
		s		:dword; 
	var	buf		:var;
		len		:dword;
		flags	:dword	// MSG_* constants 
);
begin send;

	push( ebp );
	mov( esp, ebp );
	
	#if( os.win32 )
	
		push( ecx );
		push( edx );
		
		w.send( s, val buf, len, flags );
		cmp( eax, w.SOCKET_ERROR );
		je WinSocketError;
		
		pop( edx );
		pop( ecx );
		
	#elseif( os.linux )
	
		linux.send( s, val buf, len, flags );
		test( eax, eax );
		js LinuxSocketError;
		
	#elseif( os.freeBSD )
	
		push( ecx );
		push( edx );
		
		_send( s, val buf, len, flags );
		add( 16, esp );
		cmp( eax, -1 );
		je SocketError;
		
		pop( edx );
		pop( ecx );
		
	#elseif( os.macOS )
	
		mac.send( s, val buf, len, flags );
		jc SocketError;
		
	#else
	
		#error( "Unknown OS!" );
		
	#endif	
	leave();
	ret( _parms_ );
	
#if( os.win32 )
WinSocketError:
	w.WSAGetLastError();
	mov( eax, edx );
#endif
	
#if( os.linux )
LinuxSocketError:
	neg( eax );
	mov( eax, edx );
#endif

SocketError:
	raise( ex.SocketError );
	
end send;


end sockets;
