unit ConvUnit;

#includeOnce( "../include/conversions.hhf" )
#includeOnce( "conv.hhf" )

/*************************************************************/
/*                                                           */
/* qSize-                                                    */
/*                                                           */
/* Always returns 16 or 19 (19 if the underscores flag is    */
/* set), which is the size of a string returned by qToStr.   */
/*                                                           */
/*************************************************************/



procedure conv.qSize( qValue:qword ); @nodisplay; @noframe;
begin qSize;

	conv.getUnderscores();
	lea( eax, [eax+eax*2+16] );	// 16 + underscores*3
	ret();
	
end qSize;

end ConvUnit;
