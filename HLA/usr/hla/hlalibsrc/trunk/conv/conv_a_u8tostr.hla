unit ConvUnit;

#includeOnce( "../include/conversions.hhf" )
#includeOnce( "conv.hhf" )


/***************************************************************************/
/*                                                                         */
/* a_u8ToStr-                                                              */
/*                                                                         */
/* Just like u8ToStr except this function allocates storage for the string */
/* on the heap and returns a pointer to that string in EAX.                */
/*                                                                         */
/***************************************************************************/


procedure conv.a_u8ToStr( b:byte; width:int32; f:char ); 
	 @nodisplay; 
	 @noalignstack;
	 @noframe;
begin a_u8ToStr;

	// esp+12:	b
	// esp+8:	width
	// esp+4:	f
	// esp+0:	return address

	and( $ff, (type dword [esp+12]));
	jmp conv.a_u32ToStr;
	
end a_u8ToStr;
	





end ConvUnit;
