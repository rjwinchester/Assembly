unit ConvUnit;

#includeOnce( "../include/conversions.hhf" )
#includeOnce( "conv.hhf" )

/********************************************************/
/*                                                      */
/* i16ToStr-                                            */
/*                                                      */
/* Sign extends a word value to 64 bits and then calls  */
/* the i64ToStr routine above to convert the 16-bit     */
/* integer into a string of decimal digits.             */
/*                                                      */
/********************************************************/

procedure conv.i16ToStr( w:word; width:int32; f:char; buf:string ); 
	 @nodisplay;
	 @noframe; 
	 @noalignstack;
begin i16ToStr;

	push( ebp );
	mov( esp, ebp );
	push( eax );
	
	movsx( w, eax );
	push( eax );
	push( width );
	push( (type dword f) );
	push( buf );
	call( conv.i32ToStr );
	
	pop( eax );
	pop( ebp );
	ret( _parms_ );
	
end i16ToStr;
	


end ConvUnit;
