unit DateTime;
#include( "datetime.hhf" )
#include( "dtClass.hhf" )
#include( "excepts.hhf" )

?@noframe := true;
?@nodisplay := true;

		
// timeClass_t.addHours-
//
// Adds some number of hours to the internal time format.

procedure timeClass_t.addHours( hours:uns32 );
begin addHours;

	push( ebp );
	mov( esp, ebp );
	
	test( esi, esi );
	jz badObj;
	
	time.addHours( hours, this.theTime );
	
	pop( ebp );
	ret( _parms_ );
	
badObj:
	raise( ex.BadObjPtr );
	
end addHours;

end DateTime;			
