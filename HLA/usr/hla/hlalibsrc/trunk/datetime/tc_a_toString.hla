unit DateTime;
#include( "datetime.hhf" )
#include( "dtClass.hhf" )
#include( "excepts.hhf" )
#includeOnce( "../include/datetime_private.hhf" )

?@noframe := true;
?@nodisplay := true;


// timeClass_t.a_toString-
//
//	Converts the object's time to a string
// and stores it in a string object allocated
// on the heap.
		
procedure timeClass_t.a_toString;
begin a_toString;

	push( ebx );

	test( esi, esi );
	jz badObj;
	
	_hla.get_TimeFormat();
	mov( al, bl );
	_hla.set_TimeFormat( this.timeFmt );
	
	time.a_toString( this.theTime );
	
	// Restore the original format value:
	
	_hla.set_TimeFormat( bl );
	
	pop( ebx );
	ret();
	
badObj:
	raise( ex.BadObjPtr );

end a_toString;
	
	
	
end DateTime;			
