unit DateTime;
#include( "datetime.hhf" )
#include( "dtClass.hhf" )
#include( "excepts.hhf" )

?@noframe := true;
?@nodisplay := true;

					
// virtualDateClass_t.dayOfWeek-
//
//	Returns the day of the week (0=Sunday, 6=Saturday) for
// the object's date in EAX.

method virtualDateClass_t.dayOfWeek;
begin dayOfWeek;

	test( esi, esi );
	jz badObj;
	
	date.dayOfWeek( this.theDate );
	ret();
	
badObj:
	raise( ex.BadObjPtr );
	
end dayOfWeek;
					
	
	
end DateTime;			
