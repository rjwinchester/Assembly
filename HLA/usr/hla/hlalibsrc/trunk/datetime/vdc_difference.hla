unit DateTime;
#include( "datetime.hhf" )
#include( "dtClass.hhf" )
#include( "excepts.hhf" )

?@noframe := true;
?@nodisplay := true;


// virtualDateClass_t.difference-
//
// Computes the number of days between the "otherDate"
// parameter date and the object's date. Returns this
// value in EAX.
					
method virtualDateClass_t.difference
( 
	var otherDate:virtualDateClass_t in eax 
);
begin difference;

	push( ebp );
	mov( esp, ebp );
	
	test( esi, esi );
	jz badObj;
	
	date._daysBetween
	( 
		this.theDate, 
		(type dateClass_t [eax]).theDate 
	);
	
	pop( ebp );
	ret( _parms_ );
	
badObj:
	raise( ex.BadObjPtr );
	
end difference;	
	
	
end DateTime;			
