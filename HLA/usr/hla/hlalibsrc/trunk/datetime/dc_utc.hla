unit DateTime;
#include( "datetime.hhf" )
#include( "dtClass.hhf" )
#include( "excepts.hhf" )

?@noframe := true;
?@nodisplay := true;

// dateClass_t.utc-
//
// Sets the object's date to the current system UTC date.

procedure dateClass_t.utc;
begin utc;

	test( esi, esi );
	jz badObj;
	
	date.utc( this.theDate );
	ret();
	
badObj:
	raise( ex.BadObjPtr );
	
end utc;
	
	
	
end DateTime;			
