unit DateTime;
#include( "datetime.hhf" )
#include( "dtClass.hhf" )
#include( "excepts.hhf" )

?@noframe := true;
?@nodisplay := true;

// dateClass_t.setSeparator-
//
//	Sets the output string separator character
// for this object.

procedure dateClass_t.setSeparator( c:char );
begin setSeparator;

	push( ebp );
	mov( esp, ebp );
	push( eax );
	test( esi, esi );
	jz badObj;
	
	mov( c, al );
	mov( al, this.Separator );
	pop( eax );
	pop( ebp );
	ret( _parms_ );
	
badObj:
	raise( ex.BadObjPtr );
	
end setSeparator;
		
	
end DateTime;			
