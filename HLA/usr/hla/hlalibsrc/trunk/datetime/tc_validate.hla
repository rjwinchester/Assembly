unit DateTime;
#include( "dtClass.hhf" )
#include( "excepts.hhf" )

?@noframe := true;
?@nodisplay := true;

		
// timeClass_t.validate-
//
// Raises an exception if the object's time value is invalid.

procedure timeClass_t.validate;
begin validate;

	push( ebp );
	mov( esp, ebp );
	
	test( esi, esi );
	jz badObj;
	
	time.validate( this.theTime );
	
	pop( ebp );
	ret( _parms_ );
	
badObj:
	raise( ex.BadObjPtr );
	
end validate;

end DateTime;			
