unit DateTime;
#include( "datetime.hhf" )
#include( "dtClass.hhf" )
#include( "excepts.hhf" )

?@noframe := true;
?@nodisplay := true;


// virtualDateClass_t.subYears-
//
//	Computes a new object date by subtracting the specified number
// of years from the object's date.

method virtualDateClass_t.subYears( days:uns32 );
begin subYears;

	push( ebp );
	mov( esp, ebp );
	test( esi, esi );
	jz badObj;
	
	date.subYears( days, this.theDate );
	pop( ebp );
	ret( _parms_ );

badObj:
	raise( ex.BadObjPtr );
	
end subYears;
		
	
	
end DateTime;			
