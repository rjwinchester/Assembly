unit threads;
?@nostackalign := true;
?@noframe := true;
?@nodisplay := true;

#includeOnce( "os.hhf" )
#includeOnce( "threads.hhf" )
#includeOnce( "excepts.hhf" )
#includeOnce( "../include/thread_private.hhf" )

#if( os.win32 )
	#include( "w.hhf" )
#elseif( os.linux )
	#include( "linux.hhf" )
#elseif( os.freeBSD )
	#include( "bsd.hhf" )
#elseif( os.macOS )
	#include( "mac.hhf" )
#else
	#error( "Unsupported OS" )
#endif

// thread.createTLS-
//
//	Returns the thread handle of the current thread.
// Note: this handle will be valid only within the context
// of the thread that has made the call.

#if( os.win32 )

	procedure thread.createTLS( var context:dword );
	begin createTLS;

		push( ebp );
		mov( esp, ebp );
		
		push( eax );
		push( ecx );
		push( edx );
		
		w.TlsAlloc();
		cmp( eax, $ffff_ffff );
		je threadError;
		mov( context, ecx );
		mov( eax, [ecx] );

		pop( edx );
		pop( ecx );
		pop( eax );
		leave();
		ret( _parms_ );
		
	threadError:
		raise( ex.ThreadError );
		
	end createTLS;


#elseif( os.linux | os.freeBSD | os.macOS )
	

	procedure thread.createTLS( var context:dword );
	begin createTLS;

		push( ebp );
		mov( esp, ebp );
		
		push( eax );
		push( ecx );
		push( edx );
		
		pthread_key_create( context, NULL );

		pop( edx );
		pop( ecx );
		pop( eax );
		leave();
		ret( _parms_ );
		
	end createTLS;


	
#else

	#error( "Unknown OS!" )
	
#endif


end threads;
