unit BsdUnit;
#include( "bsd.hhf" )

// mkdir - Creates a directory.

procedure bsd.mkdir( path:string; mode:bsd.mode_t );
	@nodisplay; @noframe;
begin mkdir;

	push( ebp );
	mov( esp, ebp );
	bsd.pushregs;
	mov( esp, eax );
	push( mode );
	push( path );
	push( eax ); 		// Dummy Return/stack cleanup
	mov( bsd.sys_mkdir, eax );
	int( $80 );
	pop( esp );			// Clean parms w/o affecting CF.
	bsd.popregs;
	pop( ebp );
	ret( _parms_ );	
	
end mkdir;

end BsdUnit;
