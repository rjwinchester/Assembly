unit BsdUnit;
#include( "bsd.hhf" )

// sigaction - Set up a signal handler.

procedure bsd.sigaction
(
		sig		:dword;
	var	act		:bsd.sigaction_t;
	var	oact	:bsd.sigaction_t
);
	@nodisplay; @noframe;
begin sigaction;

	push( ebp );
	mov( esp, ebp );
	bsd.pushregs;
	mov( esp, eax );
	push( oact );
	push( act );
	push( sig );
	push( eax ); 		// Dummy Return/stack cleanup
	mov( bsd.sys_sigaction, eax );
	int( $80 );
	pop( esp );			// Clean parms w/o affecting CF.
	bsd.popregs;
	pop( ebp );
	ret( _parms_ );	
	
end sigaction;

end BsdUnit;
