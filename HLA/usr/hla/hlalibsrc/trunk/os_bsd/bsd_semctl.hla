unit bsdUnit;
#include( "bsd.hhf" )

procedure _semctl( semid:dword; semnum:int32; cmd:dword; arg:bsd.semun );
	@cdecl;
	@external( "semctl" );
	
// semctl - SysV semaphore operation.

procedure bsd.semctl( semid:dword; semnum:int32; cmd:dword; arg:bsd.semun );
	@nodisplay;
	@noframe;
	
var
	ecxSave	:dword;
	edxSave	:dword;
	
begin semctl;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	
	mov( ecx, ecxSave );
	mov( edx, edxSave );
	_semctl( semid, semnum, cmd, (type dword arg) );

	mov( ecxSave, ecx );
	mov( edxSave, edx );
	leave();
	ret( _parms_ );

end semctl;

end bsdUnit;
