unit bsdUnit;
#include( "bsd.hhf" )

procedure _semop( semid:dword; sops:dword; nsops:dword );
	@cdecl;
	@external( "semop" );
	
// semop - SysV semaphore operation.

procedure bsd.semop( semid:dword; var sops:bsd.sembuf; nsops:dword );
	@nodisplay;
	@noframe;
	
var
	ecxSave	:dword;
	edxSave	:dword;
	
begin semop;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	
	mov( ecx, ecxSave );
	mov( edx, edxSave );
	_semop( semid, (type dword sops), nsops );
	
	mov( edxSave, edx );
	mov( ecxSave, ecx );
	leave();
	ret( _parms_ );
	
	
end semop;

end bsdUnit;
