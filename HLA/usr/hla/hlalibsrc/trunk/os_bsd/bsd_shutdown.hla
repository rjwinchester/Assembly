unit BsdUnit;
#include( "bsd.hhf" )

static
	c_errno	:int32;	@external( "errno" );
	
procedure _shutdown
( 
	s		:dword; 
	how		:dword 
);
	@cdecl;
	@external( "shutdown" );
	
	

// bsd.shutdown- Terminates a socket use and frees resources.

procedure bsd.shutdown
( 
	s		:dword; 
	how		:dword 
);
	@nodisplay; @noframe;
begin shutdown;

	push( ebp );
	mov( esp, ebp );
	bsd.pushregs;
	_shutdown( s, how );
	add( 8, esp );
	bsd.popregs;
	cmp( eax, -1 );
	je badRslt;
	clc();
	leave();
	ret( _parms_ );
	
badRslt:
	mov( c_errno, eax );
	stc();
	leave();
	ret( _parms_ );
	
		
end shutdown;

end BsdUnit;
