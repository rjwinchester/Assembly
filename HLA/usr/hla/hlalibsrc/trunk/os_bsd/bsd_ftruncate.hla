unit BsdUnit;
#include( "bsd.hhf" )

// ftruncate - Truncates the file to the specified offset.

procedure bsd.ftruncate( fd:dword; length:bsd.off_t );
	@nodisplay; @noframe;
begin ftruncate;

	push( ebp );
	mov( esp, ebp );
	bsd.pushregs;
	mov( esp, eax );
	push( (type dword length[4]) );
	push( (type dword length) );
	pushd( 0 );
	push( fd );
	push( eax ); 		// Dummy Return/stack cleanup
	mov( bsd.sys_ftruncate, eax );
	int( $80 );
	pop( esp );			// Clean parms w/o affecting CF.
	bsd.popregs;
	pop( ebp );
	ret( _parms_ );	
	
end ftruncate;

end BsdUnit;
