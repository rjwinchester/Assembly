unit BsdUnit;
#include( "bsd.hhf" )

static
	c_errno	:int32;	@external( "errno" );
	
procedure _bind
( 
		sockfd	:dword; 
	var	addr	:hla.sockaddr; 
		addrlen	:hla.socklen_t 
);
	@cdecl;
	@external( "bind" );
	
	

// bsd.bind- Binds a handle to a socket address.

procedure bsd.bind
( 
		sockfd	:dword; 
	var	addr	:hla.sockaddr; 
		addrlen	:hla.socklen_t 
);
	@nodisplay; @noframe;
begin bind;

	push( ebp );
	mov( esp, ebp );
	bsd.pushregs;
	_bind( sockfd, addr, addrlen );
	add( 12, esp );
	bsd.popregs;
	cmp( eax, -1 );
	je badBind;
	clc();
	leave();
	ret( _parms_ );
	
badBind:
	mov( c_errno, eax );
	stc();
	leave();
	ret( _parms_ );
	
		
end bind;

end BsdUnit;
