unit BsdUnit;
#include( "bsd.hhf" )

// getcwd - Gets the current working directory.

procedure bsd.getcwd( var buf:var; size:bsd.size_t );
	@nodisplay; @noframe;
begin getcwd;

	push( ebp );
	mov( esp, ebp );
	bsd.pushregs;
	mov( esp, eax );
	push( size );
	push( buf );
	push( eax ); 		// Dummy Return/stack cleanup
	mov( bsd.sys___getcwd, eax );
	int( $80 );
	pop( esp );			// Clean parms w/o affecting CF.
	bsd.popregs;
	pop( ebp );
	ret( _parms_ );	
	
end getcwd;

end BsdUnit;
