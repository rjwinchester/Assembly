unit BsdUnit;
#include( "bsd.hhf" )

static
	c_errno	:int32;	@external( "errno" );
	
procedure _getsockopt
( 
		s		:dword; 
		level	:dword;
		optname	:dword;
	var	optval	:var;
	var	optlen	:hla.socklen_t 
);
	@cdecl;
	@external( "getsockopt" );
	
	

// bsd.getsockopt- Gets socket options.

procedure bsd.getsockopt
( 
		s		:dword; 
		level	:dword;
		optname	:dword;
	var	optval	:var;
	var	optlen	:hla.socklen_t 
);
	@nodisplay; @noframe;
begin getsockopt;

	push( ebp );
	mov( esp, ebp );
	bsd.pushregs;
	_getsockopt( s, level, optname, val optval, optlen );
	add( 20, esp );
	bsd.popregs;
	cmp( eax, -1 );
	je badRslt;
	clc();
	leave();
	ret( _parms_ );
	
badRslt:
	mov( c_errno, eax );
	stc();
	leave();
	ret( _parms_ );
	
		
end getsockopt;

end BsdUnit;
