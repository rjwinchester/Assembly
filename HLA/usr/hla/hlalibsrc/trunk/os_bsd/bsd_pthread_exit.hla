unit bsdUnit;
#include( "bsd.hhf" )

procedure _pthread_exit( exitCode:dword );
	@cdecl;
	@external( "pthread_exit" );
	

// bsd.pthread_exit- Terminates a pthread.

procedure bsd.pthread_exit( value_ptr:dword );	
	@nodisplay;
	@noframe;
	
begin pthread_exit;

	push( ebp );
	mov( esp, ebp );
	bsd.pushregs;

	_pthread_exit( value_ptr );
	add( 4, esp );

	bsd.popregs;
	leave();
	ret( _parms_ );
	
end pthread_exit;


end bsdUnit;
