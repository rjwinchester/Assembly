unit stringUnit;
?@nodisplay := true;
?@nostackalign := true;

#include( "strings.hhf" );
#include( "excepts.hhf" );



procedure strieqne; @external( "STR_IEQNE" );

/**************************************************************/
/*                                                            */
/* ieq,                                                       */
/* ine,                                                       */
/* ilt,                                                       */
/* igt,                                                       */
/* ile,                                                       */
/* ige-                                                       */
/*                                                            */
/* These routines do a case insensitive comparison and return */
/* the boolean result in the carry flag.	These routines    */
/* compare the src1 string against the src2 string            */
/* (e.g., ile returns true if src1 <= src2).                  */
/*                                                            */
/**************************************************************/



procedure str.ieq( src1:string; src2:string ); @noframe;
begin ieq;

	push( ebp );
	mov( esp, ebp );
	push( eax );
	push( esi );
	push( edi );
	
	mov( src1, esi );
	mov( src2, edi );
	
	test( esi, esi );
	jz AttemptToDerefNULL;
	
	test( edi, edi );
	jz AttemptToDerefNULL;
	
	strieqne();
    mov( 0, eax );
	sete( al );
		
	cmp( al, 1 );		// Set the carry flag to the result state.
	cmc();
	pop( edi );
	pop( esi );
	pop( eax );
	pop( ebp );
	ret( _parms_ );
	
AttemptToDerefNULL:
	raise( ex.AttemptToDerefNULL );
	
end ieq;

end stringUnit;




	

