unit stringUnit;
?@nodisplay := true;
?@nostackalign := true;

#include( "strings.hhf" );
#include( "excepts.hhf" );



/**************************************************************************/
/*                                                                        */
/* str.catu16-                                                            */
/*                                                                        */
/* Appends the unsigned decimal equivalent of the "u16" parameter         */
/* to the end of the specified string.                                    */
/*                                                                        */
/**************************************************************************/

 
procedure str.catu16( dest:string; u16:word  ); 
	@noframe;	
begin catu16;

	push( ebp );
	mov( esp, ebp );
	push( dest );
	pushd( 0 );		// Zero extend to 64 bits.
	pushw( 0 );		//  "     "     "    "
	pushw( u16 );
	pushd( 0 );		// Width = 0;
	pushd( ' ' );	// fill character;
	call( str.catu64Size );
	pop( ebp );
	ret( _parms_ );
	
end catu16;

end stringUnit;




	

