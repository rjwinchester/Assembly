unit stringUnit;
?@nodisplay := true;
?@nostackalign := true;

#include( "strings.hhf" );
#include( "excepts.hhf" );
#include( "conv.hhf" );


/**********************************************************/
/*                                                        */
/* str.cath128-                                           */
/*                                                        */
/* Concatenates the hexadecimal representation of the "qw"*/
/* parameter to the end of the destination string.        */
/*                                                        */
/**********************************************************/

procedure str.cath128( dest:string; l:lword ); @noframe;
const
	MaxByteStrLen := 40;
	chars: text := "(type str.strRec chrs[8])";

var
	chrs:	byte[ MaxByteStrLen + 8];

begin cath128;

	push( ebp );
	mov( esp, ebp );
	sub( _vars_, esp );
	push( eax );

	// Initialize maximum string length

	mov( MaxByteStrLen, chars.maxlen );

	// Convert the dword to a string of hex digits and 
	// copy the string.

	push( (type dword l[12]) );
	push( (type dword l[8]) );
	push( (type dword l[4]) );
	push( (type dword l[0]) );
	pushd( 0 );					// minimum length.
	pushd( '0' );				// Fill character.
	lea( eax, chars );			// create pointer to string 'chars'
	push( eax ); 
	call( conv.h128ToStr );
	str.cat( (type string eax), dest );
	pop( eax );
	leave();
	ret( _parms_ );
	
end cath128;



end stringUnit;




	

