unit charSets;

#include( "cset.hhf" );


/*************************************************/
/*                                               */
/* removeChar-                                   */
/*                                               */
/* Removes the specified character from the set. */
/*                                               */
/*************************************************/

procedure cs.removeChar( c:char; var dest:cset ); 
	@nodisplay; 
	@noframe;
const
	_c		:text := "(type char [esp+16])";
	_dest	:text := "(type dword [esp+12])";
	
begin removeChar;

	push( eax );
	push( ebx );
	
	// Stack at this point:
	//
	//	esp+16	c:char
	//	esp+12	dest:dword
	//	esp+8	return address
	//	esp+4	eax
	//	esp		ebx
	
	mov( _dest, ebx );
	
	// Clear the single character from the cset:
	
	movzx( _c, eax );
	btr( eax, [ebx] );
	
	pop( ebx );
	pop( eax );
	ret( _parms_ );
	
end removeChar;


end charSets;




	

