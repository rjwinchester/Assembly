program bgetu_test;
#include( "stdlib.hhf" )

var
	b			:blob.blob;
	inputF		:real80;
	
begin bgetu_test;


	// Testing blob.getu32
	
	try
	
		blob.alloc( 8192 );
		mov( eax, b );
		blob.load( "bgetu32.data", b );

		blob.getu32( b );
		if( eax <> 1 ) then
		
			raise(1011);
		
		endif;	
		
		blob.getu32( b );
		if( eax <> 4294967295 ) then
		
			raise(1012);
		
		endif;	
				
		blob.getu32( b );
		if( eax <> 2147483647 ) then
		
			raise(1014);
		
		endif;


		
		try
		
			blob.getu32( b );

		  unprotected
		  
		  	// We we got to this point, we failed to raise a conversion error.
			
		  	Raise( 1005 );
			
		  exception( ex.ConversionError )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 1006 );
			
		endtry;
		blob.readLn( b );	// Clean up after ourselves.
		
		
		try
		
			blob.getu32( b );

		  unprotected
		  
		  	// We we got to this point, we failed to raise an overflow error.
			
		  	Raise( 1015 );
			
		  exception( ex.ValueOutOfRange )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 1016 );
			
		endtry;
		blob.readLn( b );
		
		
		// Better be at end of file.
		
		if( !blob.eof( b )) then
		
			raise(1010);
			
		endif;
		stderr.put( "blob.getu32 succeeded!" nl );
		
	  anyexception
	  
		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"blob.getu32 failed! eax=", (type uns32 eax), nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		os.exitProcess(1);
		
	endtry;








