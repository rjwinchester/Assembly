program bgethex_test;
#include( "stdlib.hhf" )

var
	b			:blob.blob;
	inputL		:lword;
	
	procedure cmp128( left:int128; right:int128 ); @returns( "@ne" );
	begin cmp128;
	
		cld();
		lea( esi, left );
		lea( edi, right );
		mov( 4, ecx );
		repe.cmpsd();
		
	end cmp128;
	
	
begin bgethex_test;

	// Testing fileio.geth128
	
	try
	
		blob.alloc( 8192 );
		mov( eax, b );
		blob.load( "bgeth128.data", b );

		blob.geth128( b, inputL );
		if( cmp128( inputL, 1 ) ) then
		
			raise(2001);
		
		endif;	
		
		blob.geth128( b, inputL );
		if( cmp128( inputL, 2 ) ) then
		
			raise(2002);
		
		endif;	
		
		blob.geth128( b, inputL );
		if( cmp128( inputL, $FFFF_FFFF_FFFF_FFFF_FFFF_FFFF_FFFF_FFFF ) ) then
		
			raise(2003);
		
		endif;	
		
		blob.geth128( b, inputL );
		if( cmp128( inputL, 0 ) ) then
		
			raise(2004);
		
		endif;
		
		try
		
			blob.geth128( b, inputL );

		  unprotected
		  
		  	// We we got to this point, we failed to raise a conversion error.
			
		  	Raise( 2005 );
			
		  exception( ex.ConversionError )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 2006 );
			
		endtry;
		blob.readLn( b );	// Clean up after ourselves.
		  		
		
		try
		
			blob.geth128( b, inputL );

		  unprotected
		  
		  	// If we got to this point, we failed to raise an overflow error.
			
		  	Raise( 2007 );
			
		  exception( ex.ValueOutOfRange )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 2008 );
			
		endtry;
		blob.readLn( b );
		
		
		// Better be at end of file.
		
		if( !blob.eof( b )) then
		
			raise(2000);
			
		endif;
		stderr.put( "blob.geth128 succeeded!" nl );
		
	  anyexception
	  
		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"blob.geth128 failed! eax=", (type uns32 eax), nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		os.exitProcess(1);
		
	endtry;





