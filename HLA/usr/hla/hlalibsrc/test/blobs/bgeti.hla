			raise(1022);
		
		endif;	
		
		blob.geti16( b );
		if( ax <> -1 ) then
		
			raise(1023);
		
		endif;	
		
		blob.geti16( b );
		if( ax <> -32768 ) then
		
			raise(1024);
		
		endif;	
		
		blob.geti16( b );
		if( ax <> 32767 ) then
		
			raise(1025);
		
		endif;
		
		try
		
			blob.geti16( b );

		  unprotected
		  
		  	// We we got to this point, we failed to raise an overflow error.
			
		  	Raise( 1026 );
			
		  exception( ex.ValueOutOfRange )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 1027 );
			
		endtry;
		blob.readLn( b );
		
		
		// Better be at end of file.
		
		if( !blob.eof( b )) then
		
			raise(1020);
			
		endif;
		stderr.put( "blob.geti16 succeeded!" nl );
		
	  anyexception
	  
		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"blob.geti16 failed! eax=", (type uns32 eax), nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		os.exitProcess(1);
		
	endtry;





	// Testing blob.geti8
	
	try
	
		blob.load( "bgeti8.data", b );

		blob.geti8( b );
		if( al <> 0 ) then
		
			raise(1031);
		
		endif;	
		
		blob.geti8( b );
		if( al <> 1 ) then
		
			raise(1032);
		
		endif;	
		
		blob.geti8( b );
		if( al <> -1 ) then
		
			raise(1033);
		
		endif;	
		
		blob.geti8( b );
		if( (type int8 al) <> -128 ) then
		
			raise(1034);
		
		endif;
		
		blob.geti8( b );
		if( al <> 127 ) then
		
			raise(1035);
		
		endif;
		
		try
		
			blob.geti8( b );

		  unprotected
		  
		  	// We we got to this point, we failed to raise an overflow error.
			
		  	Raise( 1036 );
			
		  exception( ex.ValueOutOfRange )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 1037 );
			
		endtry;
		blob.readLn( b );
		
		
		// Better be at end of file.
		
		if( !blob.eof( b )) then
		
			raise(1030);
			
		endif;
		stderr.put( "blob.geti8 succeeded!" nl );
		
	  anyexception
	  
		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"blob.geti8 failed! eax=", (type uns32 eax), nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		os.exitProcess(1);
		
	endtry;




			
end fgeti_test;

													