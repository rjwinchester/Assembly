program test_isAlpha;
#include( "stdlib.hhf" )

static
	charset:char[256] :=
		[
			#for( i := 0 to 254 )
				char(i),
			#endfor
			#255
		];
		
	results:boolean[256] :=
		[
			#for( i := 0 to 254 )
				@isalpha(char(i)),
			#endfor
			false
		];
		
begin test_isAlpha;

	for( mov( 0, ecx ); ecx<256; inc(ecx) )do
	
		chars.isAlpha( charset[ecx] );
		if( al <> results[ecx] ) then
		
			stderr.put
			( 
				nl nl 
				"***************************************************" nl
				"isalpha failed! " nl
				"al=", (type boolean al), nl,
				"results = ", results[ecx], nl
				"ecx=", ecx, nl
				"***************************************************" nl
				nl 
			);
			stdout.put( "Press Enter to Continue: " );
			stdin.readLn();
			os.exitProcess(1);
			
		endif;
		
	endfor;
	stderr.put( "chars.isAlpha succeeded!" nl );
	os.exitProcess(0);
		
end test_isAlpha;
