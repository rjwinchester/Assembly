program test_toLower;
#include( "stdlib.hhf" )

static
	charset:char[256] :=
		[
			#for( i := 0 to 254 )
				char(i),
			#endfor
			#255
		];
		
	results:char[256] :=
		[
			#for( i := 0 to 127 )
				@lowercase( char(i), 0 ),
			#endfor
			#for( i := 128 to 254 )
				char(i),
			#endfor
			#255
		];
		
begin test_toLower;

	
	for( mov( 0, ecx ); ecx<256; inc(ecx) )do
	
		chars.toLower( charset[ecx] );
		if( al <> results[ecx] ) then
		
			stderr.put
			( 
				nl nl 
				"***************************************************" nl
				"chars.toLower failed! al=", al, " ecx=", ecx, nl
				"***************************************************" nl
				nl 
			);
			stdout.put( "Press Enter to Continue: " );
			stdin.readLn();
			os.exitProcess(1);
			
		endif;
		
	endfor;
	stderr.put( "chars.toLower succeeded!" nl );
	os.exitProcess(0);
		
end test_toLower;
