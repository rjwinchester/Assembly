program sgetf_test; 
#include( "stdlib.hhf" )
#includeOnce( "sockets.hhf" )

const
	bufData_c : char[] :=
				[
					'a', #$d, #$a,
					'b', 'c',  #$d, #$a,
					'd', ' ', 'e', 'f', #$d, #$a,
					#$d, #$a,
					'1', '0', '0', #$d, #$a
				];
	

	
readonly
	bufData		:char[ @elements( bufData_c )] := bufData_c;
	
static
	quit		:dword := 0;
	hostIPadrs	:dword;
	s			:vServer_t;
	i			:int32;
	timeout		:thunk;
	calls		:dword := 0;
	
	ipAdrsStr	:str.strvar(256);
	cmdLine		:str.strvar(256);
	exmsg		:str.strvar(256);
	
	
	
	procedure connected;
		@nodisplay;
		@nostackalign;
		@noframe;
	var
		handle		:dword;
		bufIndex	:dword;
		object		:pointer to vServer_t;
		ipAdrs		:hla.sockaddr;
		
		buffer		:char[64];
		
	begin connected;

		push( ebp );
		mov( esp, ebp );
		sub( _vars_, esp );
		
		pushad();
		pushfd();
		
		mov( eax, handle );
		mov( esi, object );
		
		/*****************************************************************/
		
		try
		
			object.getf( );
			fld( 1.0 );
			fcomip( st0, st1 );
			if( @ne ) then
			
				raise(1001);
			
			endif;	
			fdecstp();
			
			object.getf( );
			fld( 2.0 );
			fcomip( st0, st1 );
			if( @ne ) then
			
				raise(1002);
			
			endif;	
			fdecstp();
			
			object.getf( );
			fld( 3.0 );
			fcomip( st0, st1 );
			if( @ne ) then
			
				raise(1003);
			
			endif;	
			fdecstp();
			
			object.getf( );
			fld( 4.0 );
			fcomip( st0, st1 );
			if( @ne ) then
			
				raise(1004);
			
			endif;	
			fdecstp();
			object.readLn( );
			
			// The following should raise EOF:
			
			object.getc();
			raise(1000);		// If we get here, it's an error

		  exception( ex.EndOfFile )
		  
			stderr.put( "f.getf succeeded!" nl );
			
		  anyexception
		  
			stderr.put
			( 
				nl nl 
				"***************************************************" nl
				"socket.getf failed! eax=", (type uns32 eax), nl
				"Data read did not match data expected in file" nl
				"***************************************************" nl
				nl 
			);
			stdout.put( "Press Enter to Continue: " );
			stdin.readLn();
			os.exitProcess(1);
			
		endtry;
			
		/*****************************************************************/
		
		object.close();
		mov( 1, quit );
		popfd();
		popad();
		leave();
		ret( _parms_ );
		
	end connected;
	
begin sgetf_test; 

	thunk timeout :=
		#{
			// On entry to thunk, EAX contains the address of the timeout
			// variable. Set this as desired for the timeout (2 seconds,
			// in this case).
			
			mov( 2, (type hla.timeval [eax]).tv_sec );
			stderr.put( "server", nl );
			
			// On the second call to this thunk, start the client application:
			
			cmp( calls, 1 );
			jne dontRunApp;
			
				#if( os.win32 )
				
					str.put
					(
						cmdLine,
						"cmd /C rclient socket_getf.data ",
						ipAdrsStr,
						" 9807"
					);
					stdout.put( "cmd=", cmdLine, "'" nl );
					
				#else
				
					str.put
					(
						cmdLine,
						"rclient.exe socket_getf.data ",
						ipAdrsStr,
						" 9807"
					);
					stdout.put( "cmd=", cmdLine, "'" nl );
					
				#endif
				os.bkgnd( cmdLine );
			
			dontRunApp:
			inc( calls );
			mov( quit, eax );
				
		}#;
	
	try
	
		mov( 0, i );
		s.create();
		
		sock.hostAdrs(); 
		mov( eax, hostIPadrs );
		sock.ipToStr( eax, ipAdrsStr );
		
		s.start
		( 
			hostIPadrs, 
			$9807, 
			timeout,
			&connected,
			0
		);
		
	  anyexception
	  
	  	ex.exceptionMsg( eax, exmsg );
	  	stdout.put( "Server Exception: ", exmsg, nl );
		fileio.close( s.handle );
		s.destroy();
		
	endtry;
	 
end sgetf_test; 
