program wclient; 
#include( "stdlib.hhf" )
#include( "sockets.hhf" )

static
	s			:client_t;
	f			:file;
	ipStr		:string;
	portStr		:string;
	filename	:string;
	ipAdrs		:dword;
	
	timeo		:hla.timeval;
	
	port		:word;
	
	ss			:str.strvar( 1024 );
	exmsg		:str.strvar( 256 );
	
	
begin wclient; 

	try
	
		s.create();
		f.create();
		arg.c();
		if( eax <> 4 ) then
		
			stderr.put( "wclient <<filename>> <<ipAddress>> <<port#>>" nl );
			exit wclient;
			
		endif;
		mov( arg.v(1), filename );
		mov( arg.v(2), ipStr );
		mov( arg.v(3), portStr );
		sock.strToIP( ipStr );
		mov( eax, ipAdrs );
		conv.atoh16( val portStr );
		mov( ax, port );
		stdout.put
		( 
			"Connecting to ipAddress: ", 
			ipStr, 
			", port= $", 
			portStr, 
			nl 
		);		
		
		f.openNew( filename );
		
		s.connect
		( 
			ipAdrs, 
			port
		);
		
		s.setTimeout2( 1, 0 );
		
		
		// Repeat the following until we time out (End of File on socket):
		
		forever
		
			s.gets( ss );
			f.puts( ss );
			f.newln();
			
		endfor;
			
	  exception( ex.EndOfFile )
	  
	  	// Normal exit from the above loop.
	
	  anyexception
	  
	  	ex.exceptionMsg( eax, exmsg );
	  	stderr.put( "Client Exception: ", exmsg, nl );
		
	endtry;
	s.close();
	s.destroy();
	f.close();
	
	// Let the server know that we are done:
	
	fileio.openNew( "wclient.done" );
	fileio.close( eax );
	 
end wclient; 