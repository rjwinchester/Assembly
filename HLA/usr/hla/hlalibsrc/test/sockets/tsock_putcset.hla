program sputcset_test; 
#include( "stdlib.hhf" )
#includeOnce( "sockets.hhf" )
#includeOnce( "sleep.hhf" )

static
	quit		:dword := 0;
	hostIPadrs	:dword;
	s			:server_t;
	timeout		:thunk;
	calls		:dword := 0;
	
	ipAdrsStr	:str.strvar(256);
	cmdLine		:str.strvar(256);
	exmsg		:str.strvar(256);
	
	c			:cset := {};
	
	
	procedure connected;
		@nodisplay;
		@nostackalign;
		@noframe;
	var
		handle		:dword;
		bufIndex	:dword;
		object		:pointer to server_t;
		ipAdrs		:hla.sockaddr;
		
		buffer		:char[64];
		
	begin connected;

		push( ebp );
		mov( esp, ebp );
		sub( _vars_, esp );
		
		pushad();
		pushfd();
		
		mov( eax, handle );
		mov( esi, object );
		
		/*****************************************************************/
		
		object.putcset( c );
		object.newln();

		or( 1, (type dword c) );
		object.putcset( c );
		object.newln();

		for( mov( 0, ecx ); ecx < 31; inc( ecx )) do

			shl( 1, (type dword c) );
			object.putcset( c );
			object.newln();

		endfor;
		mov( 0, (type dword c) );

		or( 1, (type dword c[4]) );
		object.putcset( c );
		object.newln();
		for( mov( 0, ecx ); ecx < 31; inc( ecx )) do

			shl( 1, (type dword c[4]) );
			object.putcset( c );
			object.newln();

		endfor;
		mov( 0, (type dword c[4]) );



		or( 1, (type dword c[8]) );
		object.putcset( c );
		object.newln();
		for( mov( 0, ecx ); ecx < 31; inc( ecx )) do

			shl( 1, (type dword c[8]) );
			object.putcset( c );
			object.newln();

		endfor;
		mov( 0, (type dword c[8]) );



		or( 1, (type dword c[12]) );
		object.putcset( c );
		object.newln();
		for( mov( 0, ecx ); ecx < 31; inc( ecx )) do

			shl( 1, (type dword c[12]) );
			object.putcset( c );
			object.newln();

		endfor;
		mov( 0, (type dword c[12]) );

		or( 1, (type dword c[4]));
		object.putcset( c );
		object.newln();
		for( mov( 1, ecx ); ecx < 96; inc( ecx )) do

			shl( 1, (type dword c[4]) );
			rcl( 1, (type dword c[8]) );
			rcl( 1, (type dword c[12]) );
			or( 1, (type dword c[4]) );
			object.putcset( c );
			object.newln();

		endfor;

			
		/*****************************************************************/
		
		object.close();
		mov( 1, quit );
		popfd();
		popad();
		leave();
		ret( _parms_ );
		
	end connected;
	
begin sputcset_test; 

	thunk timeout :=
		#{
			// On entry to thunk, EAX contains the address of the timeout
			// variable. Set this as desired for the timeout (1 second,
			// in this case).
			
			mov( 1, (type hla.timeval [eax]).tv_sec );
			stderr.put( "server", nl );
			
			// On the second call to this thunk, start the client application:
			
			cmp( calls, 1 );
			jne dontRunApp;
			
				str.put
				(
					cmdLine,
					"wclient.exe socket_putcset.txt ",
					ipAdrsStr,
					" 8889"
				);
				stdout.put( "cmd=", cmdLine, "'" nl );
				os.bkgnd( cmdLine );
			
			dontRunApp:
			inc( calls );
			mov( quit, eax );
				
		}#;
	
	try
	
		s.create();
		
		sock.hostAdrs(); 
		mov( eax, hostIPadrs );
		sock.ipToStr( eax, ipAdrsStr );
		
		s.start
		( 
			hostIPadrs, 
			$8889, 
			timeout,
			&connected,
			0
		);
		
	  anyexception
	  
	  	ex.exceptionMsg( eax, exmsg );
	  	stdout.put( "Server Exception: ", exmsg, nl );
		fileio.close( s.handle );
		s.destroy();
		
	endtry;
	while( !filesys.exists( "wclient.done" )) do
	
		os.sleep( 1 );
		
	endwhile;
	os.sleep( 1 );
	filesys.delete( "wclient.done" );
	 
end sputcset_test; 
