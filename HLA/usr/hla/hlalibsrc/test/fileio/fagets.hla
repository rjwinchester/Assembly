program fagets_test;
#include( "stdlib.hhf" )

var
	Handle		:dword;
	inputLine	:string;
	
begin fagets_test;

	try
	
		fileio.open( "fagets.data", fileio.r );
		mov( eax, Handle );
		fileio.a_gets( Handle );
		mov( eax, inputLine );
		if( str.ne( inputLine, "This is a test of fagets" )) then
		
			raise( 0 );
			
		endif;
		str.free( inputLine );
		
		fileio.a_gets( Handle );
		mov( eax, inputLine );
		if( str.ne( inputLine, "This is a second line" )) then
		
			raise( 0 );
			
		endif;
		str.free( inputLine );
		
		if( !fileio.eof( Handle )) then
		
			raise(0);
			
		endif;
		stderr.put( "fagets succeeded!" nl );
		os.exitProcess(0);
		
	  anyexception
	  
		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"fagets failed!" nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		os.exitProcess(1);
		
	endtry;
	stderr.put
	( 
		nl nl 
		"***************************************************" nl
		"fagets failed!" nl
		"Unknown problem with fagets test" nl
		nl 
	);
	stdout.put( "Press Enter to Continue: " );
	stdin.readLn();
	os.exitProcess(1);
			
end fagets_test;

													