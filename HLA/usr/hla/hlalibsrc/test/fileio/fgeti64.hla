program fgeti64_test;
#include( "stdlib.hhf" )

readonly
	max64 :int64 := 9223372036854775807;
	min64 :int64 := -9223372036854775808;
	

var
	Handle		:dword;
	input64		:int64;
	
	procedure cmp64( right:int64 );
	begin cmp64;
	
		cmp( edx, (type dword right[4]));
		jne notEqual;
		cmp( eax, (type dword right));
	  notEqual:
		
	end cmp64;
	
begin fgeti64_test;

	// Testing fileio.geti64
	
	try
	
		fileio.open( "fgeti64.data", fileio.r );
		mov( eax, Handle );

		fileio.geti64( Handle );
		cmp64( 0 );
		if( @ne ) then
		
			raise(1011);
		
		endif;	
		
		fileio.geti64( Handle );
		cmp64( 1 );
		if( @ne ) then
		
			raise(1012);
		
		endif;	
		
		fileio.geti64( Handle );
		cmp64( -1 );
		if( @ne ) then
		
			raise(1013);
		
		endif;	

		fileio.geti64( Handle );
		cmp64( max64 );
		if( @ne ) then
		
			raise(1014);
		
		endif;


		fileio.geti64( Handle );
		cmp64( min64 );
		if( @ne ) then
		
			raise(1015);
		
		endif;


		try
		
			fileio.geti64( Handle );

		  unprotected
		  
		  	// We we got to this point, we failed to raise a conversion error.
			
		  	Raise( 1016 );
			
		  exception( ex.ConversionError )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 1017 );
			
		endtry;
		fileio.readLn( Handle );	// Clean up after ourselves.
		
		
		try
		
			fileio.geti64( Handle );

		  unprotected
		  
		  	// We we got to this point, we failed to raise an overflow error.
			
		  	Raise( 1018 );
			
		  exception( ex.ValueOutOfRange )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 1019 );
			
		endtry;
		fileio.readLn( Handle );
		
		
		// Better be at end of file.
		
		if( !fileio.eof( Handle )) then
		
			raise(1010);
			
		endif;
		stderr.put( "fileio.geti64 succeeded!" nl );
		
	  anyexception
	  
		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"fileio.geti64 failed! eax=", (type uns32 eax), nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		os.exitProcess(1);
		
	endtry;



			
end fgeti64_test;

													