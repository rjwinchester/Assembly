program fgetc_test;
#include( "stdlib.hhf" )

const
	bufData_c : char[] :=
				[
					'a', #$d, #$a,
					'b', 'c',  #$d, #$a,
					'd', ' ', 'e', 'f', #$d, #$a,
					#$d, #$a,
					'1', '0', '0', #$d, #$a
				];
	

var
	Handle		:dword;
	bufIndex	:dword;
	buffer		:char[64];
	
readonly
	bufData		:char[ @elements( bufData_c )] := bufData_c;
					 
begin fgetc_test;

	try
	
		mov( 0, bufIndex );
		fileio.open( "fgetc.wdata", fileio.r );
		mov( eax, Handle );
		repeat
		
			fileio.getc( Handle );
			mov( bufIndex, ebx );
			cmp( al, bufData[ebx] );
			if( @ne ) then
			
				stderr.put
				( 
					"fileio.getc did not match input file at index ",
					(type uns32 ebx), 
					nl
				);
				stdout.put( "Press Enter to Continue: " );
				stdin.readLn();
				os.exitProcess(1);
				
			endif;
			mov( al, buffer[ebx] );
			inc( bufIndex );
			
		until( fileio.eof( Handle ));
		cld();
		mov( bufIndex, ecx );
		if( ecx <> @elements( bufData_c )) then
		
			stderr.put( "fileio.getc read the wrong # of chars" nl );
			os.exitProcess( 2 );
			
		endif;
		stderr.put( "fileio.getc succeeded!" nl );
		os.exitProcess(0);
		
	  anyexception

		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"fileio.getc failed!" nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		os.exitProcess(3);
		
	endtry;
	stderr.put
	( 
		nl nl 
		"***************************************************" nl
		"fileio.getc failed!" nl
		"Did not properly read the data from the file" nl
		nl 
	);
	os.exitProcess(4);
			
end fgetc_test;

													