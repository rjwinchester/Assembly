program fgetc_test;
#include( "stdlib.hhf" )

const
	bufData_c : char[] :=
				[
					'a', #$d, #$a,
					'b', 'c',  #$d, #$a,
					'd', ' ', 'e', 'f', #$d, #$a,
					#$d, #$a,
					'1', '0', '0', #$d, #$a
				];
	

var
	f			:file;
	bufIndex	:dword;
	buffer		:char[64];
	
readonly
	bufData		:char[ @elements( bufData_c )] := bufData_c;
					 
begin fgetc_test;

	try
	
		f.create();
		mov( 0, bufIndex );
		f.open( "fc_getc.wdata", fileio.r );
		repeat
		
			f.getc( );
			mov( bufIndex, ebx );
			cmp( al, bufData[ebx] );
			if( @ne ) then
			
				stderr.put
				( 
					"f.getc did not match input file at index ",
					(type uns32 ebx), 
					nl
				);
				os.exitProcess( 1 );
				
			endif;
			mov( al, buffer[ebx] );
			inc( bufIndex );
			
		until( f.eof( ));
		cld();
		mov( bufIndex, ecx );
		if( ecx <> @elements( bufData_c )) then
		
			stderr.put( "f.getc read the wrong # of chars" nl );
			os.exitProcess( 2 );
			
		endif;
		stderr.put( "f.getc succeeded!" nl );
		os.exitProcess(0);
		
	  anyexception

		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"f.getc failed!" nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		os.exitProcess(3);
		
	endtry;
	stderr.put
	( 
		nl nl 
		"***************************************************" nl
		"f.getc failed!" nl
		"Did not properly read the data from the file" nl
		nl 
	);
	os.exitProcess(4);
			
end fgetc_test;

													