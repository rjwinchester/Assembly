program fgetu128_test;
#include( "stdlib.hhf" )

readonly
	max128 :uns128 := 340282366920938463463374607431768211455;
	mid128 :uns128 := 170141183460469231731687303715884105728;

var
	f			:pointer to virtualFile;
	input128	:uns128;
	
	procedure cmp128( left:uns128; right:uns128 );
	begin cmp128;
	
		cld();
		lea( esi, left );
		lea( edi, right );
		mov( 4, ecx );
		repe.cmpsd();
		
	end cmp128;
	
begin fgetu128_test;


	// Testing fileio.getu128
	
	try
	
		virtualFile.create();
		mov( esi, f );
	
		f.open( "fc_getu128.data", fileio.r );

		f.getu128( input128 );
		cmp128( input128, 0 );
		if( @ne ) then
		
			raise($1011);
		
		endif;	
		
		f.getu128( input128 );
		cmp128( input128, 1 );
		if( @ne ) then
		
			raise($1012);
		
		endif;	
		
		f.getu128( input128 );
		cmp128( input128, max128 );
		if( @ne ) then
		
			raise($1014);
		
		endif;


		f.getu128( input128 );
		cmp128( input128, mid128 );
		if( @ne ) then
		
			raise($1015);
		
		endif;


		
		try
		
			f.getu128( input128 );

		  unprotected
		  
		  	// We we got to this point, we failed to raise a conversion error.
			
		  	raise($1016 );
			
		  exception( ex.ConversionError )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	raise($1017 );
			
		endtry;
		f.readLn(  );	// Clean up after ourselves.
		
		
		try
		
			f.getu128( input128 );

		  unprotected
		  
		  	// We we got to this point, we failed to raise an overflow error.
			
		  	raise($1018 );
			
		  exception( ex.ValueOutOfRange )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	raise($1019 );
			
		endtry;
		f.readLn(  );
		
		
		// Better be at end of file.
		
		if( !f.eof(  )) then
		
			raise($1010);
			
		endif;
		stderr.put( "f.getu128 succeeded!" nl );
		
	  anyexception
	  
		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"f.getu128 failed! eax=", eax, nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		os.exitProcess(1);
		
	endtry;



			
end fgetu128_test;

													