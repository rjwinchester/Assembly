program durToSecs_Test;
#include( "stdlib.hhf" )

static
	hours		:word;
	mins		:byte;
	secs		:byte;
	
	incTime		:time.timerec;
	resultTime	:time.timerec;
	
	seconds		:dword;
	endSeconds	:dword;		
	
begin durToSecs_Test;


	mov( 0, hours );
	mov( 0, mins );
	mov( 0, secs );
	mov( 0, seconds );
			 
	while( mov( hours, ax ) < 1000 ) do
	
		time.durationToSecs( hours, mins, secs ); 
		if( eax <> seconds ) then
		
			stderr.put
			( 
				nl nl 
				"***************************************************" nl
				"time.durToSecs failed!", nl,
				"seconds   = ", seconds, nl
				"durToSecs = ", eax, nl
				"***************************************************" nl
				nl 
			);
			stdout.put( "Press Enter to Continue: " );
			stdin.readLn();
			os.exitProcess(1);
			
		endif;
		inc( seconds );
		inc( secs );
		if( secs >= 60 ) then
		
			mov( 0, secs );
			inc( mins );
			if( mins >= 60 ) then
			
				mov( 0, mins );
				inc( hours );
				
			endif;
			
		endif;
				
	endwhile;
	stderr.put( "time.durToSecs succeeded!" nl );
	os.exitProcess(0);
		
end durToSecs_Test;

													