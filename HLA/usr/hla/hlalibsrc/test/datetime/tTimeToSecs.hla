program hmstosecs_test;
#include( "stdlib.hhf" )

static
	incTime		:time.timerec;
	endTime		:time.timerec;
	
	seconds	:dword;		
	
begin hmstosecs_test;


	mov( 0, seconds );
	mov( 0, incTime );
	mov( 60*60*24, endTime );
		 
	while( mov( endTime, eax ) >= (type dword incTime) ) do
	
		time._toSecs( incTime );
		if( eax <> seconds ) then
		
			stderr.put
			( 
				nl nl 
				"***************************************************" nl
				"time._hmsToSecs failed!", nl,
				"seconds   = ", seconds, nl
				"hmsToSecs = ", eax, nl
				"***************************************************" nl
				nl 
			);
			stdout.put( "Press Enter to Continue: " );
			stdin.readLn();
			os.exitProcess(1);
			
		endif;
		inc( seconds );
		inc( incTime.secs );
		if( incTime.secs >= 60 ) then
		
			add( 256-60, incTime );
			if( incTime.mins >= 60 ) then
			
				add( (256-60)*256, incTime );
				
			endif;
			
		endif;
		
	endwhile;
	stderr.put( "time._hmsToSecs succeeded!" nl );
	os.exitProcess(0);
		
end hmstosecs_test;

													