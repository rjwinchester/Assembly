program fpute_test;
#include( "stdlib.hhf" )

static
	e32		:real32 := 0.0;
	e64		:real64 := 0.0;
	e80		:real80 := 0.0;
	
	e32a	:real32 := 1.0;
	e64a	:real64 := 1.0;
	e80a	:real80 := 1.0;
	
	e32b	:real32 := 1.0e-37;
	e64b	:real64 := 1.0e-307;
	e80b	:real80 := 1.0e-4094;
	
	e32pi	:real32;
	e64pi	:real64;
	e80pi	:real80;

	bad_a	:real64 := 1.0e-272;
	bad_b	:real64 := 1.0e-256;

	
begin fpute_test;

	stderr.puts( "Outputting zeros:" nl nl );
	stderr.pute32( e32, 13 );
	stderr.newln();

	stderr.pute64( e64, 15 );
	stderr.newln();

	stderr.pute80( e80, 20 );
	stderr.newln();
	stderr.newln();
	stderr.newln();

	stderr.puts( "Real32 Powers of Ten: " nl nl );
	for( mov( -37, ecx ); (type int32 ecx) < 0; inc( ecx )) do

		stderr.pute32( e32b, 11 );
		stderr.newln();

		fld( e32b );
		fld( 10.0 );
		fmulp();
		fstp( e32b );

	endfor;
	fld1();
	fstp( e32b );
	for( mov( 0, ecx ); ecx < 38; inc( ecx )) do

		stderr.pute32( e32b, 11 );
		stderr.newln();

		fld( e32b );
		fld( 10.0 );
		fmulp();
		fstp( e32b );

	endfor;
	stderr.newln();
	stderr.newln();
	stderr.newln();


	stderr.puts( "Real64 Powers of Ten: " nl nl );
	for( mov( -307, ecx ); (type int32 ecx) < 0; inc( ecx )) do

		stderr.pute64( e64b, 15 );
		stderr.newln();

		fld( e64b );
		fld( 10.0 );
		fmulp();
		fstp( e64b );

	endfor;
	fld1();
	fstp( e64b );
	for( mov( 0, ecx ); ecx < 308; inc( ecx )) do

		stderr.pute64( e64b, 15 );
		stderr.newln();

		fld( e64b );
		fld( 10.0 );
		fmulp();
		fstp( e64b );

	endfor;
	stderr.newln();
	stderr.newln();
	stderr.newln();


	stderr.puts( "Real80 Powers of Ten: " nl nl );
	for( mov( -4094, ecx ); (type int32 ecx) < 0; inc( ecx )) do

		stderr.pute80( e80b, 18 );
		stderr.newln();

		fld( e80b );
		fld( 10.0 );
		fmulp();
		fstp( e80b );

	endfor;

	fld1();
	fstp( e80b );
	for( mov( 0, ecx ); ecx <= 4095; inc( ecx )) do

		stderr.pute80( e80b, 18 );
		stderr.newln();

		fld( e80b );
		fld( 10.0 );
		fmulp();
		fstp( e80b );

	endfor;
	stderr.newln();
	stderr.newln();
	stderr.newln();


	stderr.puts( "Real32 Powers of Two: " nl nl );
	for( mov( 0, ecx ); ecx < 127; inc( ecx )) do

		stderr.pute32( e32a, 11 );
		stderr.newln();

		fld( e32a );
		fld( 2.0 );
		fmulp();
		fstp( e32a );

	endfor;
	stderr.newln();
	stderr.newln();
	stderr.newln();

	stderr.puts( "Real64 Powers of Two: " nl nl );
	for( mov( 0, ecx ); ecx < 1023; inc( ecx )) do

		stderr.pute64( e64a, 15 );
		stderr.newln();

		fld( e64a );
		fld( 2.0 );
		fmulp();
		fstp( e64a );

	endfor;
	stderr.newln();
	stderr.newln();
	stderr.newln();



	stderr.puts( "Real80 Powers of Two: " nl nl );
	for( mov( 0, ecx ); ecx < 16383; inc( ecx )) do

		stderr.pute80( e80a, 18 );
		stderr.newln();

		fld( e80a );
		fld( 2.0 );
		fmulp();
		fstp( e80a );

	endfor;
	stderr.newln();
	stderr.newln();
	stderr.newln();





end fpute_test;

													