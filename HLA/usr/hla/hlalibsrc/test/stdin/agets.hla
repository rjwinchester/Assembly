program fagets_test;
#include( "stdlib.hhf" )

var
	inputLine	:string;
	
begin fagets_test;

	try
	
		stdin.a_gets();
		mov( eax, inputLine );
		if( str.ne( inputLine, "This is a test of stdin.a_gets" )) then
		
			raise( 0 );
			
		endif;
		str.free( inputLine );
		
		stdin.a_gets();
		mov( eax, inputLine );
		if( str.ne( inputLine, "This is a second line" )) then
		
			raise( 0 );
			
		endif;
		str.free( inputLine );
		stderr.put( "stdin.a_gets succeeded!" nl );
		os.exitProcess(0);
		
	  anyexception
	  
		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"stdin.a_gets failed!" nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		os.exitProcess(1);
		
	endtry;
	stderr.put
	( 
		nl nl 
		"***************************************************" nl
		"stdin.a_gets failed!" nl
		"Unknown problem with stdin.a_gets test" nl
		nl 
	);
	stdout.put( "Press Enter to Continue: " );
	stdin.readLn();
	os.exitProcess(1);
			
end fagets_test;

													