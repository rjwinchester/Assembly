program fgeti_test;
#include( "stdlib.hhf" )

var
	Handle		:dword;
	inputF		:real80;
	
begin fgeti_test;


	// Testing fileio.geti32
	
	try
	
		stdin.geti32();
		if( eax <> 1 ) then
		
			raise(1011);
		
		endif;	
		
		stdin.geti32();
		if( eax <> -2 ) then
		
			raise(1012);
		
		endif;	
		
		stdin.geti32();
		if( eax <> -2147483648 ) then
		
			raise(1013);
		
		endif;	
		
		stdin.geti32();
		if( eax <> 2147483647 ) then
		
			raise(1014);
		
		endif;


		
		try
		
			stdin.geti32();

		  unprotected
		  
		  	// We we got to this point, we failed to raise a conversion error.
			
		  	Raise( 1005 );
			
		  exception( ex.ConversionError )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 1006 );
			
		endtry;
		stdin.readLn();	// Clean up after ourselves.
		
		
		try
		
			stdin.geti32();

		  unprotected
		  
		  	// We we got to this point, we failed to raise an overflow error.
			
		  	Raise( 1015 );
			
		  exception( ex.ValueOutOfRange )
		  
		  	// Okay, we succeeded if we got this exception.
			
		  anyexception
		  
		  	// Anything else? Pass it on.
			
		  	Raise( 1016 );
			
		endtry;
		stdin.readLn();
		stderr.put( "stdin.geti32 succeeded!" nl );
		
	  anyexception
	  
		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"stdin.geti32 failed! eax=", (type uns32 eax), nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		stdout.put( "Press Enter to Continue: " );
		stdin.readLn();
		os.exitProcess(1);
		
	endtry;








