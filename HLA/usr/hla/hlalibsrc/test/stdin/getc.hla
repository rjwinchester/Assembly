program fgetc_test;
#include( "stdlib.hhf" )

const
	bufData_c : char[] :=
				[
					'a', #$a,
					'b', 'c',  #$a,
					'd', ' ', 'e', 'f', #$a,
					#$a,
					'1', '0', '0', #$a
				];
	

var
	bufIndex	:dword;
	buffer		:char[64];
	
readonly
	bufData		:char[ @elements( bufData_c )] := bufData_c;
					 
begin fgetc_test;

	try
	
		mov( 0, bufIndex );
		repeat
		
			stdin.getc();
			mov( bufIndex, ebx );
			cmp( al, bufData[ebx] );
			if( @ne ) then
			
				stderr.put
				( 
					"stdin.getc did not match input file at index ",
					(type uns32 ebx), 
					nl
				);
				stdout.put( "Press Enter to Continue: " );
				stdin.readLn();
				os.exitProcess(1);
				
			endif;
			mov( al, buffer[ebx] );
			inc( bufIndex );
			
		until( bufIndex = @elements( bufData_c ) );
		cld();
		stderr.put( "stdin.getc succeeded!" nl );
		os.exitProcess(0);
		
	  anyexception

		stderr.put
		( 
			nl nl 
			"***************************************************" nl
			"stdin.getc failed!" nl
			"Data read did not match data expected in file" nl
			"***************************************************" nl
			nl 
		);
		os.exitProcess(3);
		
	endtry;
	stderr.put
	( 
		nl nl 
		"***************************************************" nl
		"stdin.getc failed!" nl
		"Did not properly read the data from the file" nl
		nl 
	);
	os.exitProcess(4);
			
end fgetc_test;

													